<IfModule mod_deflate.c>
    RemoveOutputFilter DEFLATE
    RemoveOutputFilter GZIP
</IfModule>

<Files ~ "\.(cfg|ini|xml|php)$">
    <IfModule mod_authz_host.c>
        <IfModule !mod_authz_core.c>
            #Apache 2.2
            order allow,deny
            deny from all
        </IfModule>
        <IfModule mod_authz_core.c>
            #Apache 2.3+
            Require all denied
        </IfModule>
    </IfModule>
</Files>
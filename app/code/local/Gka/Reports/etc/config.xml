<?xml version="1.0"?>
<config>
    <modules>
        <Gka_Reports>
            <version>0.1.0</version>
        </Gka_Reports>
    </modules>
    <frontend>
        <routers>
            <gka_reports>
                <use>standard</use>
                <args>
                    <module>Gka_Reports</module>
                    <frontName>gka_reports</frontName>
                </args>
            </gka_reports>
        </routers>
        <layout>
            <updates>
                <reports>
                    <file>gka/reports.xml</file>
                </reports>
            </updates>
        </layout>
        <translate>
            <modules>
              <Gka_Reports>
                  <files>
                      <default>Gka_Reports.csv</default>
                  </files>
              </Gka_Reports>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
			<reports>
				<use>admin</use>
				<args>
					<module>Gka_Reports</module>
					<frontName>reports</frontName>
				</args>
			</reports>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<reports module="gka_reports">
				<title>Reports</title>
				<sort_order>71</sort_order>
				<children>
					<items module="reports">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>reports/adminhtml_reports</action>
					</items>
				</children>
			</reports>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Gka_Reports>
							<title>Reports Module</title>
							<sort_order>10</sort_order>
						</Gka_Reports>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<reports>
					<file>gka/reports.xml</file>
				</reports>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <gka_reports>
                <class>Gka_Reports_Model</class>
                <resourceModel>gka_reports_mysql4</resourceModel>
            </gka_reports>
            <gka_reports_mysql4>
                <class>Gka_Reports_Model_Mysql4</class>
            </gka_reports_mysql4>
        </models>
        <resources>
            <reports_setup>
                <setup>
                    <module>Gka_Reports</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </reports_setup>
            <reports_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </reports_write>
            <reports_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </reports_read>
        </resources>
        <blocks>
            <gka_reports>
                <class>Gka_Reports_Block</class>
            </gka_reports>
        </blocks>
        <helpers>
            <gka_reports>
                <class>Gka_Reports_Helper</class>
            </gka_reports>
        </helpers>
    </global>
</config>
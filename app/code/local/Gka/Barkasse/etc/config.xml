<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE config>
<config>
    <modules>
        <Gka_Barkasse>
            <version>0.1.1.0</version>
        </Gka_Barkasse>
    </modules>
    <global>
        <helpers>
            <gka_barkasse>
                <class>Gka_Barkasse_Helper</class>
            </gka_barkasse>
             <epaybl_cashpayment>
                <class>Gka_Barkasse_Helper</class>
            </epaybl_cashpayment>
            <customer>
                <rewrite>
                    <data>Gka_Barkasse_Helper_Customer</data>
                </rewrite>
            </customer>
        </helpers>
        <resources>
            <gka_barkasse_setup>
                <setup>
                    <module>Gka_Barkasse</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </gka_barkasse_setup>
        </resources>
        <blocks>
          <gka_barkasse>
              <class>Gka_Barkasse_Block</class>
          </gka_barkasse>
        </blocks>
        <models>
            <gka_barkasse>
                <class>Gka_Barkasse_Model</class>
                <resourceModel>gka_barkasse_resource</resourceModel>
            </gka_barkasse>
            <gka_barkasse_resource>
                <class>Gka_Barkasse_Model_Resource</class>
                <entities>
                  <kassenbuch_journal>
                    <table>gka_barkasse_kassenbuch_journal</table>
                  </kassenbuch_journal>
                  <kassenbuch_journal_items>
                    <table>gka_barkasse_kassenbuch_journal_items</table>
                  </kassenbuch_journal_items>
                  <kassenbuch_cashbox>
                    <table>gka_barkasse_kassenbuch_cashbox</table>
                  </kassenbuch_cashbox>

                </entities>
            </gka_barkasse_resource>
        </models>
        <pdftemplate>
          <types>
              <report_cashbox>Cashbox Report</report_cashbox>
          </types>
        </pdftemplate>
        <events>
            <checkout_submit_all_after>
                <observers>
                    <gka_barkasse_save_order_after>
                        <type>singleton</type>
                        <class>gka_barkasse/observer</class>
                        <method>onCheckoutSubmitAllAfter</method>
                    </gka_barkasse_save_order_after>
                </observers>
            </checkout_submit_all_after>
            <customer_customer_authenticated>
            <observers>
                    <gka_barkasse_customer_authenticated>
                        <type>singleton</type>
                        <class>gka_barkasse/observer</class>
                        <method>onCustomerAuthenticated</method>
                    </gka_barkasse_customer_authenticated>
                </observers>
            </customer_customer_authenticated>
        </events>
        <fieldsets>
        	<sales_convert_quote_payment>
                <given_amount>
                    <to_order_payment>*</to_order_payment>
                </given_amount>
           </sales_convert_quote_payment>
           <sales_convert_order_payment>
            	<given_amount>
                    <to_order_payment>*</to_order_payment>
                </given_amount>
           </sales_convert_order_payment>
         </fieldsets>
         <template>
            <email>
                <payment_epaybl_cashpayment_close_journal_notification_email_template translate="label" module="gka_barkasse">
                    <label>Journal Closing Notification E-Mail Template</label>
                    <file>gka/barkasse/journal_closing.html</file>
                    <type>html</type>
                </payment_epaybl_cashpayment_close_journal_notification_email_template>
               
             </email>
        </template>
    </global>
    <frontend>
      <routers>
            <gka_barkasse>
                <use>standard</use>
                <args>
                    <module>Gka_Barkasse</module>
                    <frontName>gka_barkasse</frontName>
                </args>
            </gka_barkasse>
        </routers>
        <layout>
            <updates>
                <gka_barkasse>
                  <file>gka/barkasse.xml</file>
                </gka_barkasse>
            </updates>
        </layout>
        <translate>
            <modules>
              <Gka_Barkasse>
                  <files>
                      <default>Gka_Barkasse.csv</default>
                  </files>
              </Gka_Barkasse>
            </modules>
        </translate>
    </frontend>
    <admin>
      <routers>
          <adminhtml>
              <args>
                  <modules>
                      <Gka_Barkasse_Adminhtml after="Mage_Adminhtml">Gka_Barkasse_Adminhtml</Gka_Barkasse_Adminhtml>
                  </modules>
              </args>
          </adminhtml>
      </routers>
    </admin>
    <adminhtml>
      <menu>
          <gkabarkasse module="gka_barkasse">
              <title>Barkasse</title>
              <sort_order>50</sort_order>
              <children>
                  <gkabarkasse_kassenbuch_journal module="gka_barkasse">
                      <title>Kassenbuch</title>
                      <sort_order>10</sort_order>
                      <action>adminhtml/barkasse_kassenbuch_journal/index</action>
                  </gkabarkasse_kassenbuch_journal>
                  <gkabarkasse_kassenbuch_cashbox module="gka_barkasse">
                      <title>Barkassen konfiguration</title>
                      <sort_order>30</sort_order>
                      <action>adminhtml/barkasse_kassenbuch_cashbox/index</action>
                  </gkabarkasse_kassenbuch_cashbox>

              </children>
          </gkabarkasse>
      </menu>
      <acl>
          <resources>
              <all>
                  <title>Allow Everything</title>
              </all>
              <admin>
                  <children>
                      <gkabarkasse module="gka_barkasse">
                          <title>Gka Barkasse</title>
                          <sort_order>10</sort_order>
                          <children>
                                <gkabarkasse_kassenbuch_journal module="gka_barkasse">
                                  <title>Kassenbuch Journal</title>
                                  <sort_order>10</sort_order>
                              </gkabarkasse_kassenbuch_journal>
                                <gkabarkasse_kassenbuch_cashbox module="gka_barkasse">
                                  <title>Kassenbuch Cashbox</title>
                                  <sort_order>30</sort_order>
                              </gkabarkasse_kassenbuch_cashbox>

                          </children>
                      </gkabarkasse>
                  </children>
              </admin>
          </resources>
      </acl>
        <translate>
            <modules>
                <Gka_Barkasse>
                    <files>
                        <default>Gka_Barkasse.csv</default>
                    </files>
                </Gka_Barkasse>
            </modules>
        </translate>
        <layout>
          <updates>
            <gkabarkasse>
              <file>gka/barkasse.xml</file>
            </gkabarkasse>
          </updates>
        </layout>
    </adminhtml>
    <default>
        <payment>
            <epaybl_cashpayment>
                <currency>EUR</currency>
                <model>gka_barkasse/cashpayment</model>
                <payment_action>authorize_capture</payment_action>
                <title>Barkasse</title>
                <order_status>processing</order_status>
                <allowspecific>0</allowspecific>
                <!-- Der Kunde soll nach jeder Zahlung gelÃ¶scht werden -->
                <delete_customer_after_transaction>1</delete_customer_after_transaction>
                <group>epaybl</group>
                <close_journal_notification_email_template>payment_epaybl_cashpayment_close_journal_notification_email_template</close_journal_notification_email_template>
            </epaybl_cashpayment>
        </payment>
    </default>
</config>

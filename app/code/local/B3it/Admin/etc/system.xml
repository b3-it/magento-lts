<config>
    <sections>
        <admin>
            <groups>
                <security>
                    <fields>
                        <max_failed_logins translate="label comment" module="b3itadmin">
                            <label>Max failed logins</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Deactivate account after max failed logins.</comment>
                        </max_failed_logins>
                        <run_unlock translate="label comment">
                            <label>Unlock accounts</label>
                            <frontend_type>select</frontend_type>
                            <backend_model>b3itadmin/system_config_runnow</backend_model>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Unlock all locked accounts</comment>
                        </run_unlock>
                        <yubico_offical_servers translate="label" module="b3itadmin">
                            <label>Use offical Yubico validation servers?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </yubico_offical_servers>
                        <yubico_client_id translate="label comment" module="b3itadmin">
                            <label>Yubico Client ID</label>
                            <frontend_type>text</frontend_type>
                            <backend_model>b3itadmin/system_config_isInUse</backend_model>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Your Yubico Client-ID.</comment>
                            <depends>
                                <yubico_offical_servers>1</yubico_offical_servers>
                            </depends>
                        </yubico_client_id>
                        <yubico_api_key translate="label comment" module="b3itadmin">
                            <label>Yubico API Key</label>
                            <frontend_type>text</frontend_type>
                            <backend_model>b3itadmin/system_config_isInUse</backend_model>
                            <sort_order>300</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Your Yubico API Key.</comment>
                            <depends>
                                <yubico_offical_servers>1</yubico_offical_servers>
                            </depends>
                        </yubico_api_key>
                        <yubico_verfiy_https translate="label" module="b3itadmin">
                            <label>Verify validation server certificate?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>400</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </yubico_verfiy_https>
                    </fields>
                </security>
            </groups>
        </admin>
    </sections>
</config>
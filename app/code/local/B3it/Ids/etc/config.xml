<config>
    <modules>
        <B3it_Ids>
            <version>0.0.1.0</version>
        </B3it_Ids>
    </modules>
    <adminhtml>
        <translate>
            <modules>
                <B3it_Ids>
                    <files>
                        <default>B3it_Ids.csv</default>
                    </files>
                </B3it_Ids>
            </modules>
        </translate>
 
    </adminhtml>
    <global>
           <events>
            <controller_front_init_before>
                <observers>
                    <B3it_Ids_Observer>
                        <type>singleton</type>
                        <class>b3it_ids/observer</class>
                        <method>onFrontControllerInitBefore</method>
                    </B3it_Ids_Observer>
                </observers>
            </controller_front_init_before>
       
        </events>
        <blocks>
            <b3it_ids>
                <class>B3it_Ids_Block</class>
            </b3it_ids>
        </blocks>
        <models>
            <b3it_ids>
                <class>B3it_Ids_Model</class>
                <resourceModel>b3it_ids_resource</resourceModel>
            </b3it_ids>
            <b3it_ids_resource>
				 <class>B3it_Ids_Model_Resource</class>
				 <entities>
					  <ids_events>
							<table>ids_events</table>
					  </ids_events> 
					  <ids_events_filters>
					  	<table>ids_events_filters</table>
					  </ids_events_filters> 
				 </entities>
			</b3it_ids_resource>
        </models>
        	
        <resources>
            <b3itids_setup>
                <setup>
                    <module>B3it_Ids</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </b3itids_setup>
        </resources>
        <helpers>
            <b3it_ids>
                <class>B3it_Ids_Helper</class>
            </b3it_ids>
        </helpers>
    </global>
</config>
									</b3it_subscription>
								</children>
							</sales>
		    			    <system>
		    			        <children>
		    			            <config>
		    			                <children>
		    			                    <b3it_subscription translate="title" module="b3it_subscription">
		    			                        <title>Subscription Section</title>
		    			                    </b3it_subscription>
		    			                </children>
		    			            </config>
		    			        </children>

<?xml version="1.0"?>
<config>
    <modules>
        <Egovs_Import>
            <version>0.1.0</version>
        </Egovs_Import>
    </modules>
 
    <admin>
        <routers>
			<adminhtml>	
				<args>
					<modules>
						<Egovs_Import_Adminhtml after="Mage_Adminhtml">Egovs_Import_Adminhtml</Egovs_Import_Adminhtml>
					</modules>
				</args>
			</adminhtml>
        </routers>
    </admin>
    <adminhtml>
		<menu>
		    <system>
		        <children>
			<import module="import">
				<title>Data Exchange</title>
				<sort_order>71</sort_order>               
				<children>
				    <export module="import">
				        <title>Export</title>
				        <sort_order>10</sort_order>
				        <action>adminhtml/import_export</action>
				    </export>
					<items module="import">
						<title>Import</title>
						<sort_order>20</sort_order>
						<action>adminhtml/import_import</action>
					</items>
				</children>
			</import>
		    </children>
		    </system>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Egovs_Import>
							<title>Import Module</title>
							<sort_order>10</sort_order>
						</Egovs_Import>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<import>
					<file>egovs_import.xml</file>
				</import>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <egovsimport>
                <class>Egovs_Import_Model</class>
                <resourceModel>import_mysql4</resourceModel>
            </egovsimport>
            <import_mysql4>
                <class>Egovs_Import_Model_Mysql4</class>
                <entities>
                    <import>
                        <table>import</table>
                    </import>
                </entities>
            </import_mysql4>
        </models>
        <resources>
        	<egovsimport_setup>
                <setup>
                    <module>Egovs_Import</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </egovsimport_setup>
            <import_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </import_write>
            <import_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </import_read>
        </resources>
        <blocks>
            <import>
                <class>Egovs_Import_Block</class>
            </import>
        </blocks>
        <helpers>
            <import>
                <class>Egovs_Import_Helper</class>
            </import>
        </helpers>
    </global>
</config>
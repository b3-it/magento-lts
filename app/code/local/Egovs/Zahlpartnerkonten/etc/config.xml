<?xml version="1.0"?>
<config>
    <modules>
        <Egovs_Zahlpartnerkonten>
            <version>0.4.1</version>
        </Egovs_Zahlpartnerkonten>
    </modules>
    <admin>
        <routers>
            <adminhtml>	
				<args>
					<modules>
						<Egovs_Zahlpartnerkonten_Adminhtml after="Mage_Adminhtml">Egovs_Zahlpartnerkonten_Adminhtml</Egovs_Zahlpartnerkonten_Adminhtml>
					</modules>
				</args>
			</adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <system>
                <children>
                    <zpkonten module="zpkonten">
                        <title>Kassenzeichen verwalten</title>
                        <sort_order>99</sort_order>
                        <action>adminhtml/zahlpartnerkonten_pool</action>
                    </zpkonten>
                </children>
            </system>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <zpkonten>
                                    <title>Kassenzeichen verwalten</title>
                                    <sort_order>10</sort_order>
                                </zpkonten>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <zpkonten>
                    <file>egovs/zpkonten.xml</file>
                </zpkonten>
            </updates>
        </layout>
        <translate>
            <modules>
                <Egovs_Zahlpartnerkonten>
                    <files>
                        <default>Egovs_Zpkonten.csv</default>
                    </files>
                </Egovs_Zahlpartnerkonten>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <translate>
            <modules>
                <Egovs_Zahlpartnerkonten>
                    <files>
                        <default>Egovs_Zpkonten.csv</default>
                    </files>
                </Egovs_Zahlpartnerkonten>
            </modules>
        </translate>
        <routers>
            <saferpay>
                <args>
                    <modules>
                        <Egovs_Zahlpartnerkonten before="Egovs_Saferpay">Egovs_Zahlpartnerkonten</Egovs_Zahlpartnerkonten>
                    </modules>
                </args>
            </saferpay>
            <giropay>
                <args>
                    <modules>
                        <Egovs_Zahlpartnerkonten before="Egovs_Giropay">Egovs_Zahlpartnerkonten</Egovs_Zahlpartnerkonten>
                    </modules>
                </args>
            </giropay>
        </routers>
    </frontend>
    <global>
        <models>
            <zpkonten>
                <class>Egovs_Zahlpartnerkonten_Model</class>
                <resourceModel>zpkonten_mysql4</resourceModel>
            </zpkonten>
            <zpkonten_mysql4>
                <class>Egovs_Zahlpartnerkonten_Model_Mysql4</class>
                <entities>
                    <pool>
                        <table>zahlpartnerkonten_pool</table>
                    </pool>
                </entities>
            </zpkonten_mysql4>
            <openaccount>
                <rewrite>
                    <openaccount>Egovs_Zahlpartnerkonten_Model_Payment_Openaccount</openaccount>
                </rewrite>
            </openaccount>
            <bankpayment>
                <rewrite>
                    <bankpayment>Egovs_Zahlpartnerkonten_Model_Payment_Bankpayment</bankpayment>
                </rewrite>
            </bankpayment>
            <paymentbase>
                <rewrite>
                    <paymentbase>Egovs_Zahlpartnerkonten_Model_Paymentbase</paymentbase>
                </rewrite>
            </paymentbase>
            <debit>
                <rewrite>
                    <debit>Egovs_Zahlpartnerkonten_Model_Payment_Debit</debit>
                </rewrite>
            </debit>
            <sepadebitbund>
                <rewrite>
                    <sepadebitbund>Egovs_Zahlpartnerkonten_Model_Payment_Sepadebitbund</sepadebitbund>
                </rewrite>
            </sepadebitbund>
            <debitpin>
                <rewrite>
                    <paymentLogic>Egovs_Zahlpartnerkonten_Model_Payment_Debitpin</paymentLogic>
                </rewrite>
            </debitpin>
            <giropay>
                <rewrite>
                    <giropay>Egovs_Zahlpartnerkonten_Model_Payment_Giropay</giropay>
                </rewrite>
            </giropay>
            <saferpay>
                <rewrite>
                    <saferpay>Egovs_Zahlpartnerkonten_Model_Payment_Saferpay</saferpay>
                </rewrite>
            </saferpay>
        </models>
        <resources>
            <zahlpartnerkonten_setup>
                <setup>
                    <module>Egovs_Zahlpartnerkonten</module>
                    <class>Egovs_Base_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </zahlpartnerkonten_setup>
            <zahlpartnerkonten_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </zahlpartnerkonten_write>
            <zahlpartnerkonten_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </zahlpartnerkonten_read>
        </resources>
        <blocks>
            <zpkonten>
                <class>Egovs_Zahlpartnerkonten_Block</class>
            </zpkonten>
        </blocks>
        <helpers>
            <zpkonten>
                <class>Egovs_Zahlpartnerkonten_Helper</class>
            </zpkonten>
        </helpers>
        <events>
            <customer_save_after>
                <observers>
                    <zpkonten>
                        <type>singleton</type>
                        <class>Egovs_Zahlpartnerkonten_Model_Observer</class>
                        <method>onCustomerSaveAfter</method>
                    </zpkonten>
                </observers>
            </customer_save_after>
        </events>
    </global>
    <default>
        <payment>
            <paymentbase>
                <zpkonten_pool_limit>1000</zpkonten_pool_limit>
                <zpkonten_length>11</zpkonten_length>
                <zpkonten_checksum>1</zpkonten_checksum>
            </paymentbase>
        </payment>
    </default>
</config>

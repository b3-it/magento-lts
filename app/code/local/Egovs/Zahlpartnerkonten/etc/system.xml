<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config>
<config>
    <sections>
         <payment_services translate="label" >
            <groups>
                <paymentbase translate="label">      
                    <fields>
                        <mandanten_kz_prefix translate="label" module="zpkonten">
                            <label>Mandantenprefix für Kassenzeichen bei Zahlpartnerkonten</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <backend_model>zpkonten/system_config_backend_prefix</backend_model>
                        </mandanten_kz_prefix>
                        <zpkonten_length translate="label" module="zpkonten">
                            <label>Kassenzeichenlänge</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>105</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Länge ohne Prüfziffer, fehlende Stellen werden aufgefüllt</comment>
                        </zpkonten_length>
                        <zpkonten_pool_limit translate="label" module="zpkonten">
                            <label>Menge für freie Kassenzeichen bei Zahlpartnerkonten ab der gewarnt wird</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </zpkonten_pool_limit>
                        <zpkonten_checksum translate="label" module="zpkonten">
                            <label>Prüfziffer für Zahlpartnerkonten verwenden</label>
                            <frontend_type>select</frontend_type>
         					<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>112</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </zpkonten_checksum>
                  </fields>
                </paymentbase>      
            </groups>
        </payment_services>
    </sections>
</config>

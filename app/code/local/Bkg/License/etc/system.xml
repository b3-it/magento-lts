<?xml version="1.0"?>
<!DOCTYPE config>
<config>
    <sections>
         <bkg_license translate="label" module="bkg_license">
         	<label>License</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <email translate="label">
                    <label>E-Mail Settings</label>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                         <sender_name translate="label">
                            <label>Sending Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sender_name>
                         <sender_email_address translate="label">
                            <label>Sending E-Mail Address</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sender_email_address>
                    	
                        <copy_license_inform_template translate="label">
                            <label>License Copy Template</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>40</sort_order>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </copy_license_inform_template>
                      </fields>
                </email>  
            </groups>
        </bkg_license>
        <dev>
            <groups>
                <modulelog>
                    <fields>
                        <bkg_licence>
                            <label>licence</label>
                            <frontend_type>select</frontend_type>

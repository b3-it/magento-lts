                   <components_content_category>
                    <table>virtualgeo_components_content_category</table>
                   </components_content_category>
                   <components_storage_entity>
                    <table>virtualgeo_components_storage_entity</table>
                   </components_storage_entity>
                   <components_storage_label>
                    <table>virtualgeo_components_storage_label</table>
                   </components_storage_label>
                   <components_storage_product>
                    <table>virtualgeo_components_storage_product</table>
                   </components_storage_product>
				   <components_structure_entity>
                    <table>virtualgeo_components_structure_entity</table>
                   </components_structure_entity>
                   <components_structure_label>
                    <table>virtualgeo_components_structure_label</table>
                   </components_structure_label>
                   <components_structure_product>
                    <table>virtualgeo_components_structure_product</table>
                   </components_structure_product>
                   <components_resolution_entity>
                    <table>virtualgeo_components_resolution_entity</table>
                   </components_resolution_entity>
                   <components_resolution_label>
                    <table>virtualgeo_components_resolution_label</table>
                   </components_resolution_label>
                   <components_resolution_product>
                    <table>virtualgeo_components_option_type_value</table>
                   </components_resolution_product>
                    <components_content_category>
                        <table>virtualgeo_components_content_category</table>
                    </components_content_category>
                    <components_structure_category>
                        <table>virtualgeo_components_structure_category</table>
                    </components_structure_category>
				   <quote_options>
                        <table>virtualgeo_quote_options</table>
                    </quote_options>
                    <service_geometry>
                    	<table>virtualgeo_service_geometry</table>
                    </service_geometry>
                    <bundle_option>
                        <table>virtualgeo_bundle_option</table>
                    </bundle_option>
                    <bundle_selection>
                        <table>virtualgeo_bundle_selection</table>
                    </bundle_selection>
                    <product_option_value>
                        <table>virtualgeo_components_option_type_value</table>
                    </product_option_value>
                </entities>
            </virtualgeo_resource>

        </models>
        <resources>
            <bkg_virtualgeo_setup>
                <setup>
                    <module>Bkg_VirtualGeo</module>
                    <class>Bkg_VirtualGeo_Model_Resource_Setup</class>
                </setup>
            </bkg_virtualgeo_setup>
        </resources>
        <events>

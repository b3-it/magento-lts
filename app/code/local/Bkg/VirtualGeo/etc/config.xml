    <global>

        <fieldsets>
            <virtualgeo_sales_copy_order>
                <entity_id>
                    <to_regionallocation>order_id</to_regionallocation>
                </entity_id>
                <increment_id>
                    <to_regionallocation>order_increment_id</to_regionallocation>
                </increment_id>
                <created_at>
                    <to_regionallocation>*</to_regionallocation>
                </created_at>
                <updated_at>
                    <to_regionallocation>*</to_regionallocation>
                </updated_at>
                <customer_id>
                    <to_regionallocation>*</to_regionallocation>
                </customer_id>
            </virtualgeo_sales_copy_order>
            <virtualgeo_sales_copy_order_item>
                <item_id>
                    <to_regionallocation>order_item_id</to_regionallocation>
                </item_id>
                <name>
                    <to_regionallocation>product_name</to_regionallocation>
                </name>
                <sku>
                    <to_regionallocation>product_sku</to_regionallocation>
                </sku>
            </virtualgeo_sales_copy_order_item>
        </fieldsets>
        <catalog>
            <product>
                <type>
                    <virtualgeo translate="label" module="virtualgeo">
                        <label>Virtual Geo</label>
                        <model>virtualgeo/product_type</model>
                        <composite>1</composite>
                        <allowed_selection_types>
                            <simple/>
                            <virtual/>
                        </allowed_selection_types>
                        <price_model>virtualgeo/product_price</price_model>
                        <index_data_retreiver>bundle/catalogIndex_data_bundle</index_data_retreiver>
                        <index_priority>40</index_priority>
                        <price_indexer>virtualgeo/indexer_price</price_indexer>
                        <stock_indexer>virtualgeo/indexer_stock</stock_indexer>
                    </virtualgeo>
                    <configurable>
                        <allow_product_types>
                            <virtualgeo/>
                        </allow_product_types>
                    </configurable>
                </type>
            </product>
        </catalog>
        <blocks>
            <virtualgeo>
                <class>Bkg_VirtualGeo_Block</class>
            </virtualgeo>

        </blocks>
        <helpers>
            <virtualgeo>
                <class>Bkg_VirtualGeo_Helper</class>
            </virtualgeo>
        </helpers>
        <models>
            <virtualgeo>
                <class>Bkg_VirtualGeo_Model</class>
                <resourceModel>virtualgeo_resource</resourceModel>
            </virtualgeo>
            <virtualgeo_resource>
				<class>Bkg_VirtualGeo_Model_Resource</class>
				<entities>
                   <components_regionallocation>
                    <table>virtualgeo_components_regionallocation</table>
                   </components_regionallocation>
                   <components_format_entity>
                    <table>virtualgeo_components_format_entity</table>
                   </components_format_entity>
                   <components_format_label>

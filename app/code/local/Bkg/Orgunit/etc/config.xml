<?xml version="1.0"?>
<config>
    <modules>
        <Bkg_Orgunit>
            <version>0.1.0.0</version>
        </Bkg_Orgunit>
    </modules>
    <global>
        <helpers>
            <bkg_orgunit>
                <class>Bkg_Orgunit_Helper</class>
            </bkg_orgunit>
        </helpers>
        <resources>
            <bkg_orgunit_setup>
                <setup>
                    <module>Bkg_Orgunit</module>
                    <class>Mage_Customer_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bkg_orgunit_setup>
        </resources>
        <blocks>
            <bkg_orgunit>
                <class>Bkg_Orgunit_Block</class>
            </bkg_orgunit>
        </blocks>
        <models>
            <bkg_orgunit>
                <class>Bkg_Orgunit_Model</class>
                <resourceModel>bkg_orgunit_resource</resourceModel>
            </bkg_orgunit>
            <bkg_orgunit_resource>
                <class>Bkg_Orgunit_Model_Resource</class>
                <entities>
                    <unit>
                        <table>bkg_orgunit_unit</table>
                    </unit>
                    <unit_address_entity>
                        <table>bkg_orgunit_unit_address_entity</table>
                    </unit_address_entity>
                    <unit_address_entity_varchar>
                        <table>bkg_orgunit_unit_address_entity_varchar</table>
                    </unit_address_entity_varchar>
                    <eav_attribute>
                        <table>bkg_orgunit_eav_attribute</table>
                    </eav_attribute>
                    <form_attribute>
                        <table>bkg_orgunit_form_attribute</table>
                    </form_attribute>
                </entities>
            </bkg_orgunit_resource>
        </models>
        <events>
            <egovs_base_customer_address_edit_block_before_html>
                <observers>
                    <bkg_orgunit_customer_address_block_edit>
                        <type>singleton</type>
                        <class>bkg_orgunit/observer</class>
                        <method>address_block_edit</method>
                    </bkg_orgunit_customer_address_block_edit>
                </observers>
            </egovs_base_customer_address_edit_block_before_html>
            <customer_save_before>
                <observers>
                    <bkg_orgunit_customer_save_before>
                        <type>singleton</type>
                        <class>bkg_orgunit/observer</class>
                        <method>customer_save_before</method>
                    </bkg_orgunit_customer_save_before>
                </observers>
            </customer_save_before>
            <customer_save_after>
                <observers>
                    <bkg_orgunit_customer_save_after>
                        <type>singleton</type>
                        <class>bkg_orgunit/observer</class>
                        <method>customer_save_after</method>
                    </bkg_orgunit_customer_save_after>
                </observers>
            </customer_save_after>
            <egovs_base_customer_address_readonly>
                <observers>
                    <bkg_orgunit_customer_save_after>
                        <type>singleton</type>
                        <class>bkg_orgunit/observer</class>
                        <method>customer_address_readonly</method>
                    </bkg_orgunit_customer_save_after>
                </observers>
            </egovs_base_customer_address_readonly>
            <egovs_base_customer_reject_address_delete>
                <observers>
                    <bkg_orgunit_customer_save_after>
                        <type>singleton</type>
                        <class>bkg_orgunit/observer</class>
                        <method>customer_address_reject_address_delete</method>
                    </bkg_orgunit_customer_save_after>
                </observers>
            </egovs_base_customer_reject_address_delete>
        </events>
    </global>
    <frontend>
        <routers>
            <bkg_orgunit>
                <use>standard</use>
                <args>
                    <module>Bkg_Orgunit</module>
                    <frontName>bkg_orgunit</frontName>
                </args>
            </bkg_orgunit>
            <customer>
                <args>
                    <modules>
                        <general before="Mage_Customer">Bkg_Orgunit</general>
                    </modules>
                </args>
            </customer>
        </routers>
        <layout>
            <updates>
                <bkg_orgunit>
                    <file>bkg/orgunit.xml</file>
                </bkg_orgunit>
            </updates>
        </layout>
        <translate>
            <modules>
                <Bkg_Orgunit>
                    <files>
                        <default>bkg/orgunit.csv</default>
                    </files>
                </Bkg_Orgunit>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Bkg_Orgunit_Adminhtml after="Mage_Adminhtml">Bkg_Orgunit_Adminhtml</Bkg_Orgunit_Adminhtml>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Bkg_Orgunit>
                    <files>
                        <default>bkg/orgunit.csv</default>
                    </files>
                </Bkg_Orgunit>
            </modules>
        </translate>
        <layout>
            <updates>
                <bkgorgunit>
                    <file>bkg/orgunit.xml</file>
                </bkgorgunit>
            </updates>
        </layout>
    </adminhtml>
</config>

<?xml version="1.0"?>
<config>
    <modules>
        <Bkg_Orgunit>
            <version>0.1.0.0</version>
        </Bkg_Orgunit>
    </modules>
    <global>
        <helpers>
            <bkg_orgunit>
                <class>Bkg_Orgunit_Helper</class>
            </bkg_orgunit>
        </helpers>
        <resources>
            <bkg_orgunit_setup>
                <setup>
                    <module>Bkg_Orgunit</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bkg_orgunit_setup>
        </resources>
        <blocks>
          <bkg_orgunit>
              <class>Bkg_Orgunit_Block</class>
          </bkg_orgunit>
          <adminhtml>
                <rewrite>
                	<!-- To hide Org addresses in customer edit -->
                    <customer_edit_tab_addresses>Bkg_Orgunit_Block_Adminhtml_Customer_Edit_Tab_Addresses</customer_edit_tab_addresses>
                </rewrite>
            </adminhtml>
        </blocks>
        <models>
        	<adminhtml>
        		<rewrite>
        			<customer_renderer_region>Bkg_Orgunit_Model_Rewrite_Customer_Renderer_Region</customer_renderer_region>
        		</rewrite>
        	</adminhtml>
        	<customer_resource>
        		<rewrite>
        			<!-- To prevent the Org addresses from being deleted by customer save -->
            		<customer>Bkg_Orgunit_Model_Resource_Customer</customer>
        		</rewrite>
    		</customer_resource>
    		<egovsbase>
    			<rewrite>
    				<!-- rewrite to set own address template -->
    				<adminhtml_observer>Bkg_Orgunit_Model_Rewrite_Observer</adminhtml_observer>
    			</rewrite>
    		</egovsbase>  
            <bkg_orgunit>
                <class>Bkg_Orgunit_Model</class>
                <resourceModel>bkg_orgunit_resource</resourceModel>
            </bkg_orgunit>
            <bkg_orgunit_resource>
                <class>Bkg_Orgunit_Model_Resource</class>
                <entities>
                  <unit>
                    <table>bkg_orgunit_unit</table>
                  </unit>
                  <unit_address_entity>
                        <table>bkg_orgunit_unit_address_entity</table>
                  </unit_address_entity>
                  <unit_address_entity_varchar>
                        <table>bkg_orgunit_unit_address_entity_varchar</table>
                  </unit_address_entity_varchar>
                  <eav_attribute>
                        <table>bkg_orgunit_eav_attribute</table>
                  </eav_attribute>
                  <form_attribute>
                        <table>bkg_orgunit_form_attribute</table>
                  </form_attribute>
                </entities>
            </bkg_orgunit_resource>
        </models>
        <events>
        	<customer_save_before>
        		<observers>
        			<bkg_orgunit_customer_save_before>
        				<type>singleton</type>
        				<class>bkg_orgunit/observer</class>
        				<method>customer_save_before</method>
        			</bkg_orgunit_customer_save_before>
        		</observers>
        	</customer_save_before>
        	<customer_save_after>
        		<observers>
        			<bkg_orgunit_customer_save_after>
        				<type>singleton</type>
        				<class>bkg_orgunit/observer</class>
        				<method>customer_save_after</method>
        			</bkg_orgunit_customer_save_after>
        		</observers>
        	</customer_save_after>
        </events>
    </global>
    <frontend>
      <routers>
            <bkg_orgunit>
                <use>standard</use>
                <args>
                    <module>Bkg_Orgunit</module>
                    <frontName>bkg_orgunit</frontName>
                </args>
            </bkg_orgunit>
            <customer>
            	<args>
            		<modules>
                        <general before="Mage_Customer">Bkg_Orgunit</general>
                    </modules>
            	</args>
            </customer>
        </routers>
        <layout>
            <updates>
                <bkg_orgunit>
                  <file>bkg/orgunit.xml</file>
                </bkg_orgunit>
            </updates>
        </layout>
        <translate>
            <modules>
              <Bkg_Orgunit>
                  <files>
                      <default>bkg/orgunit.csv</default>
                  </files>
              </Bkg_Orgunit>
            </modules>
        </translate>
    </frontend>
    <admin>
      <routers>
          <adminhtml>
              <args>
                  <modules>
                      <Bkg_Orgunit_Adminhtml after="Mage_Adminhtml">Bkg_Orgunit_Adminhtml</Bkg_Orgunit_Adminhtml>
                  </modules>
              </args>
          </adminhtml>
      </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Bkg_Orgunit>
                    <files>
                        <default>bkg/orgunit.csv</default>
                    </files>
                </Bkg_Orgunit>
            </modules>
        </translate>
        <layout>
          <updates>
            <bkgorgunit>
              <file>bkg/orgunit.xml</file>
            </bkgorgunit>
          </updates>
        </layout>
    </adminhtml>
</config>

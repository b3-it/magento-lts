<?xml version="1.0"?>
<config>
    <modules>
        <Bkg_Orgunit>
            <version>0.1.0.0</version>
        </Bkg_Orgunit>
    </modules>
    <global>
        <helpers>
            <bkg_orgunit>
                <class>Bkg_Orgunit_Helper</class>
            </bkg_orgunit>
        </helpers>
        <resources>
            <bkg_orgunit_setup>
                <setup>
                    <module>Bkg_Orgunit</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bkg_orgunit_setup>
        </resources>
        <blocks>
          <bkg_orgunit>
              <class>Bkg_Orgunit_Block</class>
          </bkg_orgunit>
        </blocks>
        <models>
            <bkg_orgunit>
                <class>Bkg_Orgunit_Model</class>
                <resourceModel>bkg_orgunit_resource</resourceModel>
            </bkg_orgunit>
            <bkg_orgunit_resource>
                <class>Bkg_Orgunit_Model_Resource</class>
                <entities>
                  <unit>
                    <table>bkg_orgunit_unit</table>
                  </unit>
                  <unit_address_entity>
                        <table>bkg_orgunit_unit_address_entity</table>
                  </unit_address_entity>
                  <unit_address_entity_varchar>
                        <table>bkg_orgunit_unit_address_entity_varchar</table>
                  </unit_address_entity_varchar>
                </entities>
            </bkg_orgunit_resource>
        </models>
    </global>
    <frontend>
      <routers>
            <bkg_orgunit>
                <use>standard</use>
                <args>
                    <module>Bkg_Orgunit</module>
                    <frontName>bkg_orgunit</frontName>
                </args>
            </bkg_orgunit>
        </routers>
        <layout>
            <updates>
                <bkg_orgunit>
                  <file>bkg/orgunit.xml</file>
                </bkg_orgunit>
            </updates>
        </layout>
        <translate>
            <modules>
              <Bkg_Orgunit>
                  <files>
                      <default>bkg/orgunit.csv</default>
                  </files>
              </Bkg_Orgunit>
            </modules>
        </translate>
    </frontend>
    <admin>
      <routers>
          <adminhtml>
              <args>
                  <modules>
                      <Bkg_Orgunit_Adminhtml after="Mage_Adminhtml">Bkg_Orgunit_Adminhtml</Bkg_Orgunit_Adminhtml>
                  </modules>
              </args>
          </adminhtml>
      </routers>
    </admin>
    <adminhtml>
      <menu>
          <bkgorgunit module="bkg_orgunit">
              <title>Bkg Orgunit</title>
              <sort_order>50</sort_order>
              <children>
                  <bkgorgunit_unit module="bkg_orgunit">
                      <title>Unit</title>
                      <sort_order>10</sort_order>
                      <action>adminhtml/orgunit_unit/index</action>
                  </bkgorgunit_unit>

              </children>
          </bkgorgunit>
      </menu>
      <acl>
          <resources>
              <all>
                  <title>Allow Everything</title>
              </all>
              <admin>
                  <children>
                      <bkgorgunit module="bkg_orgunit">
                          <title>Bkg Orgunit</title>
                          <sort_order>10</sort_order>
                          <children>
                                <bkgorgunit_unit module="bkg_orgunit">
                                  <title>Unit</title>
                                  <sort_order>10</sort_order>
                              </bkgorgunit_unit>

                          </children>
                      </bkgorgunit>
                  </children>
              </admin>
          </resources>
      </acl>
        <translate>
            <modules>
                <Bkg_Orgunit>
                    <files>
                        <default>bkg/orgunit.csv</default>
                    </files>
                </Bkg_Orgunit>
            </modules>
        </translate>
        <layout>
          <updates>
            <bkgorgunit>
              <file>bkg/orgunit.xml</file>
            </bkgorgunit>
          </updates>
        </layout>
    </adminhtml>
</config>

	</default>
	<global>
	    <models>
	    	<smjshipment>
	    		<class>Gitter_Smjshipment_Model</class>
	    	</smjshipment>
	    </models>
	    <helpers>
	   		<smjshipment>
	       		<class>Gitter_Smjshipment_Helper</class>
	   		</smjshipment>
	 	</helpers>
	 	<resources>
	            <smjshipment_setup>
	                <setup>
	                    <module>Gitter_Smjshipment</module>
	                    <class>Mage_Catalog_Model_Resource_Setup</class>
	                </setup>
	                <connection>
	                    <use>core_setup</use>
	                </connection>
	            </smjshipment_setup>
	        </resources>
	    <sales>
	        <quote>
	            <item>
	                <product_attributes>
	                    <smjshipment_group/>
	                </product_attributes> 
	            </item>
	        </quote>
	    </sales>
	</global>
	<frontend>
	       <translate>
	            <modules>
	                <Gitter_Smjshipment>
	                    <files>
	                        <default>Gitter_Smjshipping.csv</default>
	                    </files>
	                </Gitter_Smjshipment>
	            </modules>
	        </translate>
	</frontend>
	<adminhtml>
	       <translate>
	            <modules>
	                <Gitter_Smjshipment>
	                    <files>
	                        <default>Gitter_Smjshipping.csv</default>

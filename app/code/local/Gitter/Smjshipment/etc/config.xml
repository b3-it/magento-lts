<?xml version="1.0" ?>
<!DOCTYPE config>
<config>
	<modules>
	    <Gitter_Smjshipment>
	        <version>0.1.0</version>
	    </Gitter_Smjshipment>
	</modules>
	<default>
	  <carriers>
	   <smjshipment>
	       <active>1</active>
	       <allowed_methods>smjshipment</allowed_methods>
	       <methods>smjshipment</methods>
	       <sallowspecific>0</sallowspecific>
	       <model>smjshipment/smjshipment</model>
	       <name>smjshipment</name>
	       <price>0.00</price>

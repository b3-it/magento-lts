<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE config>
<config>
    <modules>
        <Dwd_Abo>
            <version>0.1.2</version>
        </Dwd_Abo>
    </modules>
    <frontend>
        <routers>
            <dwd_abo>
                <use>standard</use>
                <args>
                    <module>Dwd_Abo</module>
                    <frontName>dwd_abo</frontName>
                </args>
            </dwd_abo>
        </routers>
        <layout>
            <updates>
                <dwd_abo>
                    <file>dwd/abo.xml</file>
                </dwd_abo>
            </updates>
        </layout>
        <translate>
            <modules>
                <Dwd_Abo>
                    <files>
                        <default>Dwd_Abo.csv</default>
                    </files>
                </Dwd_Abo>
            </modules>
        </translate>
    </frontend>
    <admin>
		<routers>
			<adminhtml>	
				<args>
					<modules>
						<Dwd_Abo_Adminhtml after="Mage_Adminhtml">Dwd_Abo_Adminhtml</Dwd_Abo_Adminhtml>
					</modules>
				</args>
			</adminhtml>
		</routers>
    </admin>

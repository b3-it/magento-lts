    <global>
        <models>
            <dwd_abo>
                <class>Dwd_Abo_Model</class>
                <resourceModel>dwd_abo_mysql4</resourceModel>
            </dwd_abo>
            <dwd_abo_mysql4>
                <class>Dwd_Abo_Model_Mysql4</class>
                <entities>
                    <abo>
                        <table>dwd_abo</table>
                    </abo>
                    <tierprice_depends>
                        <table>dwd_abo_tierprice_depends</table>
                    </tierprice_depends>
                </entities>
            </dwd_abo_mysql4>
        </models>
        <resources>
            <dwd_abo_setup>
                <setup>
                    <module>Dwd_Abo</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </dwd_abo_setup>
            <abo_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </abo_write>
            <abo_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </abo_read>
        </resources>
        <blocks>
            <dwd_abo>
                <class>Dwd_Abo_Block</class>
            </dwd_abo>
        </blocks>
        <helpers>
            <dwd_abo>
                <class>Dwd_Abo_Helper</class>
            </dwd_abo>
        </helpers>
    	<allowed_renewal_payment_methods>	
    		<openaccount>openaccount</openaccount>
			<sepadebitbund>sepadebitbund</sepadebitbund>
    	</allowed_renewal_payment_methods>
    </global>
        <crontab>
        <jobs>
            <dwd_abo_collect>
                <schedule>
                    <cron_expr>0,10,20,30,40,50 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>dwd_abo/cron::collect</model>
                </run>
            </dwd_abo_collect>
        </jobs>
    </crontab>
</config>
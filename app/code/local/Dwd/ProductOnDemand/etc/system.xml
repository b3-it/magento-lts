<?xml version="1.0"?>
<!DOCTYPE config>
<config>
    <sections>
        <catalog>
            <groups>
                <dwd_pod translate="label" module="prondemand">
                    <label>Product On Demand</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>620</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <salt translate="label comment">
                            <label>Salt</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Salt for transferred parameters hash</comment>
                        </salt>
                        <hash_algorithm translate="label comment">
                            <label>Hash Algorithm</label>
                            <frontend_type>select</frontend_type>
                            <source_model>prondemand/adminhtml_system_config_source_hash</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Hash Algorithm to use (md5, sha1)</comment>
                        </hash_algorithm>
                        <transaction_url translate="label">
                            <label>Transaction URL</label>
                            <frontend_type>text</frontend_type>
                            <backend_model>prondemand/adminhtml_system_config_backend_url</backend_model>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>URL for Transaction Meta Data servlet</comment>
                        </transaction_url>
                        <ca_path translate="label comment">
                            <label>CA Path</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>300</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <verify_peer>1</verify_peer>
                            </depends>
                            <validate>required-entry</validate>
                            <comment><![CDATA[Directory with correctly hashed CA certificates (DEFAULT: /etc/ssl/certs)]]></comment>
                        </ca_path>
                        <verify_peer>
                            <label>Verify peer</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>400</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </verify_peer>
                        <is_debug>
                            <label>Development mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2000</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </is_debug>
                    </fields>
                </dwd_pod>
            </groups>
        </catalog>
    </sections>
</config>
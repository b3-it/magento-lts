<?xml version="1.0"?>
<config>
    <modules>
        <Bfr_EventRequest>
            <version>0.1.0</version>
        </Bfr_EventRequest>
    </modules>
    <frontend>
        <routers>
            <eventrequest>
                <use>standard</use>
                <args>
                    <module>Bfr_EventRequest</module>
                    <frontName>eventrequest</frontName>
                </args>
            </eventrequest>
        </routers>
        <layout>
            <updates>
                <eventrequest>
                    <file>eventrequest.xml</file>
                </eventrequest>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
         <adminhtml>
           <args>
             <modules>
               <Bfr_EventRequest_Adminhtml after="Mage_Adminhtml">Bfr_EventRequest_Adminhtml</Bfr_EventRequest_Adminhtml>
             </modules>
           </args>
         </adminhtml>
       </routers>
    </admin>
    <adminhtml>
		<menu>
			<eventrequest module="eventrequest">
				<title>EventRequest</title>
				<sort_order>71</sort_order>
				<children>
					<eventrequest_request module="eventrequest">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>adminhtml/eventrequest_request</action>
					</eventrequest_request>
				</children>
			</eventrequest>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<bfr_eventrequest>
							<title>EventRequest Module</title>
							<sort_order>10</sort_order>
              <children>
                	<eventrequest_request module="pdftemplate">
                    	<title>Manage EventRequest Request</title>
                    	<sort_order>0</sort_order>
                	</eventrequest_request>
              </children>
						</bfr_eventrequest>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<eventrequest>
					<file>Bfr/eventrequest.xml</file>
				</eventrequest>
			</updates>
		</layout>
    </adminhtml>
    <global>
        <models>
            <eventrequest>
                <class>Bfr_EventRequest_Model</class>
                <resourceModel>eventrequest_resource</resourceModel>
            </eventrequest>
            <eventrequest_resource>
                <class>Bfr_EventRequest_Model_Resource</class>
                <entities>
                    <request>
                        <table>eventrequest_request</table>
                    </request>
                </entities>
            </eventrequest_resource>
        </models>
        <resources>
            <bfr_eventrequest_setup>
                <setup>
                    <module>Bfr_EventRequest</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bfr_eventrequest_setup>
            <eventrequest_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </eventrequest_write>
            <eventrequest_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </eventrequest_read>
        </resources>
        <blocks>
            <eventrequest>
                <class>Bfr_EventRequest_Block</class>
            </eventrequest>
        </blocks>
        <helpers>
            <eventrequest>
                <class>Bfr_EventRequest_Helper</class>
            </eventrequest>
        </helpers>
        <events>
            <sales_quote_add_item>
                <observers>
                    <bfr_eventrequest_add_item>
                        <type>singleton</type>
                        <class>Bfr_EventRequest_Model_Observer</class>
                        <method>onQuoteItemAdd</method>
                    </bfr_eventrequest_add_item>
                </observers>
            </sales_quote_add_item>
        </events>
        <sales>
			<quote>
				<item>
					<product_attributes>
						<eventrequest />
					</product_attributes>
				</item>
			</quote>
		</sales>
    </global>
</config>

<config>
    <sections>
        <checkout translate="label" module="checkout">
             <groups>
                <cart translate="label"> 
                    <fields>
                        <slpb_count translate="label">
                            <label>Max. Anzahl der Publikationen</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </slpb_count>
                        <slpb_stars translate="label">
                            <label>Max. Anzahl der Sternchen</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </slpb_stars>
                        <orders_per_period translate="label">
                            <label>Max. Anzahl der Bestellungen pro Periode</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </orders_per_period>
                        <slpb_max_qty translate="label">
                            <label>Max. Anzahl pro Produkt</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </slpb_max_qty>
                    </fields>
                </cart>
            </groups>
        </checkout>
        <general>
             <groups>
                <slpb translate="label"> 
                <label>SLpB</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <period_start translate="label">
                            <label>Perioden Anfang</label>
                            <comment>yyyy-mm-dd</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </period_start>
                        <period_stop translate="label">
                            <label>Perioden Ende</label>
                            <comment>yyyy-mm-dd</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </period_stop>
                    </fields>
                </slpb>
            </groups>
        </general>
    </sections>
</config>
<?xml version="1.0"?>
<config>
    <modules>
        <Sid_ExportOrder>
            <version>0.1.0</version>
        </Sid_ExportOrder>
    </modules>
    <admin>
         <routers>
			<adminhtml>	
				<args>
					<modules>
						<Sid_ExportOrder_Adminhtml after="Mage_Adminhtml">Sid_ExportOrder_Adminhtml</Sid_ExportOrder_Adminhtml>
					</modules>
				</args>
			</adminhtml>
        </routers>
    </admin>
    <global>
        <models>
            <exportorder>
                <class>Sid_ExportOrder_Model</class>
                <resourceModel>exportorder_resource</resourceModel>
            </exportorder>
            <exportorder_resource>
                <class>Sid_ExportOrder_Model_Resource</class>
                <entities>
                    <order>
                        <table>sidexport_order</table>
                    </order>
                    <transfer_email>
                        <table>sidexportorder_transfer_email</table>
                    </transfer_email>
                    <transfer_post>
                        <table>sidexportorder_transfer_post</table>
                    </transfer_post> 
                    <format_plain>
                        <table>sidexportorder_format_plain</table>
                    </format_plain>
                    <format_transdoc>
                        <table>sidexportorder_format_transdoc</table>
                    </format_transdoc>       
                </entities>
            </exportorder_resource>
        </models>
        <resources>
            <sidexportorder_setup>
                <setup>
                    <module>Sid_ExportOrder</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sidexportorder_setup>
            <exportorder_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </exportorder_write>
            <exportorder_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </exportorder_read>
        </resources>
        <blocks>
            <sid_exportorder>
                <class>Sid_ExportOrder_Block</class>
            </sid_exportorder>
        </blocks>
        <helpers>
            <exportorder>
                <class>Sid_ExportOrder_Helper</class>
            </exportorder>
        </helpers>
        <template>
            <email>
                <exportorder_vendor_order_plain translate="label" module="exportorder">
                    <label>Lieferantenbestellung Einfach</label>
                    <file>sid/exportorder/order_plain.html</file>
                    <type>html</type>
                </exportorder_vendor_order_plain>
                <exportorder_vendor_error translate="label" module="exportorder">
                    <label>Lieferantenbestellung Fehlerinformation</label>
                    <file>sid/exportorder/error.html</file>
                    <type>html</type>
                </exportorder_vendor_error>
             </email>
        </template>
    </global>
    <adminhtml>
    <events>
      <framecontract_vendor_save_after>
        <observers>
          <exportorder_vendor_save_observer>
            <class>exportorder/observer</class>
            <method>onVendorSaveAfter</method>
          </exportorder_vendor_save_observer>
        </observers>
      </framecontract_vendor_save_after>
      </events>
    </adminhtml>
    <sid_exportorder>
    	<format>
    		<plain>
	    		<label>Plain</label>
	    		<typ>plain</typ>
    		</plain>
    		<transdoc>
	    		<label>Transdoc</label>
	    		<typ>transdoc</typ>
    		</transdoc>
    		<csv></csv>
    		<transdoc></transdoc>
    	</format>
    	<transfer>
    		<email>
    			<label>Email</label>
	    		<typ>email</typ>
    		</email>
    		<email_attachment>
    			<label>email_attachment</label>
	    		<typ>email_attachment</typ>
    		</email_attachment>
    		<post>
    			<label>Post</label>
	    		<typ>post</typ>
	    	</post>
    	</transfer>
    </sid_exportorder>
        <crontab>
        <jobs>
            <exportorder>
                <schedule>
                    <cron_expr>*/1 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>exportorder/cron::runCron</model>
                </run>
            </exportorder>
        </jobs>
    </crontab>
    <default>
        <exportorder>
            <email>
                <vendor_order_plain>exportorder_vendor_order_plain</vendor_order_plain>
                <error>exportorder_vendor_error</error>
            </email>
        </exportorder>
    </default>
</config>
<?xml version="1.0"?>
<config>
    <modules>
        <Sid_Haushalt>
            <version>0.1.0</version>
        </Sid_Haushalt>
    </modules>
    <admin>
        <routers>
			<haushalt>
				<use>admin</use>
				<args>
					<module>Sid_Haushalt</module>
					<frontName>haushalt</frontName>
				</args>
			</haushalt>
        </routers>
    </admin>
    <frontend>
        <routers>
            <sidhaushalt>
                <use>standard</use>
                <args>
                    <module>Sid_Haushalt</module>
                    <frontName>sidhaushalt</frontName>
                </args>
            </sidhaushalt>
        </routers>
    </frontend>
    
    <adminhtml>
    </adminhtml>   
    <global>
        <models>
            <sidhaushalt>
                <class>Sid_Haushalt_Model</class>
                <resourceModel>sidhaushalt_mysql4</resourceModel>
            </sidhaushalt>
            <sidhaushalt_mysql4>
                <class>Sid_Haushalt_Model_Mysql4</class>
                <entities>
                    <order_info>
                        <table>sid_haushalt_order_info</table>
                    </order_info>
                </entities>
            </sidhaushalt_mysql4>
        </models>
        <resources>
            <sid_haushalt_setup>
                <setup>
                    <module>Sid_Haushalt</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sid_haushalt_setup>
            <haushalt_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </haushalt_write>
            <haushalt_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </haushalt_read>
        </resources>
        <blocks>
            <haushalt>
                <class>Sid_Haushalt_Block</class>
            </haushalt>
        </blocks>
        <helpers>
            <sidhaushalt>
                <class>Sid_Haushalt_Helper</class>
            </sidhaushalt>
        </helpers>
        <events>
           	<checkout_submit_all_after>
        		<observers>
        			<Sid_Haushalt>
        				<type>singleton</type>
        				<class>Sid_Haushalt_Model_Observer</class>
        				<method>onCreateOrder</method>
        			</Sid_Haushalt>
        		</observers>
        	</checkout_submit_all_after>
        </events>
    </global>
    <sid_haushaltsysteme>
    	<lg04>
    		<label>Agresso LG 04</label>
    		<type>lg04</type>
    	</lg04>
    </sid_haushaltsysteme>
</config>
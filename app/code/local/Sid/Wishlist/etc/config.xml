<?xml version="1.0"?>
<config>
    <modules>
        <Sid_Wishlist>
            <version>0.1.3.0</version>
        </Sid_Wishlist>
    </modules>
    <frontend>
        <secure_url>
            <sidwishlist>/sidwishlist/</sidwishlist>
        </secure_url>
        <routers>
            <sidwishlist>
                <use>standard</use>
                <args>
                    <module>Sid_Wishlist</module>
                    <frontName>sidwishlist</frontName>
                </args>
            </sidwishlist>
        </routers>
        <layout>
            <updates>
                <sidwishlist>
                    <file>sid/wishlist.xml</file>
                </sidwishlist>
            </updates>
        </layout>
		<translate>
            <modules>
                <Sid_Wishlist>
                    <files>
                        <default>Sid_Wishlist.csv</default>
                    </files>
                </Sid_Wishlist>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <!-- Kann nicht in adminhtml.xml -->
        <translate>
            <modules>
                <Sid_Wishlist>
                    <files>
                        <default>Sid_Wishlist.csv</default>
                    </files>
                </Sid_Wishlist>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
			<sidwishlist>
				<use>admin</use>
				<args>
					<module>Sid_Wishlist</module>
					<frontName>sidwishlist</frontName>
				</args>
			</sidwishlist>
        </routers>
    </admin>  
    <global>
        <models>
            <sidwishlist>
                <class>Sid_Wishlist_Model</class>
                <resourceModel>sidwishlist_resource</resourceModel>
            </sidwishlist>
            <sidwishlist_resource>
                <class>Sid_Wishlist_Model_Resource</class>
                <entities>
                    <quote>
                        <table>sid_wishlist_flat_quote</table>
                    </quote>
                    <quote_item>
                        <table>sid_wishlist_flat_quote_item</table>
                    </quote_item>
                    <quote_item_option>
                        <table>sid_wishlist_flat_quote_item_option</table>
                    </quote_item_option>
                </entities>
            </sidwishlist_resource>
        </models>
        <resources>
            <sidwishlist_setup>
                <setup>
                    <module>Sid_Wishlist</module>
                    <class>Sid_Wishlist_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sidwishlist_setup>
            <sidwishlist_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </sidwishlist_write>
            <sidwishlist_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </sidwishlist_read>
        </resources>
        <blocks>
            <sidwishlist>
                <class>Sid_Wishlist_Block</class>
            </sidwishlist>
        </blocks>
        <helpers>
            <sidwishlist>
                <class>Sid_Wishlist_Helper</class>
            </sidwishlist>
        </helpers>
        <events>
            <sid_wishlist_quote_item_delete_after>
                <observers>
                    <sid_wishlist_remove_item>
                        <type>singleton</type>
                        <class>sidwishlist/quote_observer</class>
                        <method>onQuoteItemRemove</method>
                    </sid_wishlist_remove_item>
                </observers>
            </sid_wishlist_quote_item_delete_after>
            <sales_quote_item_delete_after>
                <observers>
                    <sid_wishlist_sales_remove_item>
                        <type>singleton</type>
                        <class>sidwishlist/sales_observer</class>
                        <method>onQuoteItemRemove</method>
                    </sid_wishlist_sales_remove_item>
                </observers>
            </sales_quote_item_delete_after>
            <sales_quote_item_qty_set_after>
                <observers>
                    <sidwishlist_sales_quote_item_qty_set_after>
                        <type>singleton</type>
                        <class>sidwishlist/sales_observer</class>
                        <method>onSalesQuoteItemQtySetAfter</method>
                    </sidwishlist_sales_quote_item_qty_set_after>
                </observers>
            </sales_quote_item_qty_set_after>
            <sales_order_place_after>
                <observers>
                    <sidwishlist_sales_order_place_after>
                        <type>singleton</type>
                        <class>sidwishlist/sales_observer</class>
                        <method>onSalesOrderPlaceAfter</method>
                    </sidwishlist_sales_order_place_after>
                </observers>
            </sales_order_place_after>
            <sales_quote_add_item>
                <observers>
                    <sidwishlist_sales_quote_add_item>
                        <type>singleton</type>
                        <class>sidwishlist/sales_observer</class>
                        <method>onSalesQuoteAddItem</method>
                    </sidwishlist_sales_quote_add_item>
                </observers>
            </sales_quote_add_item>
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <sidwishlist_convert_quote_item_to_order_item>
                        <type>singleton</type>
                        <class>sidwishlist/sales_observer</class>
                        <method>onSalesQuoteConvertItem</method>
                    </sidwishlist_convert_quote_item_to_order_item>
                </observers>
            </sales_convert_quote_item_to_order_item>
        </events>
        <fieldsets>
            <!-- <sales_convert_quote_item> fielset funktioniert nicht, da sidwishlist_item_id in sales/quote_item und nicht in sales/quote_address_item gepsiechert wird -->
        </fieldsets>
    </global>
    <default>
        <sidwishlist>
            <general>
                <active>1</active>
                <delete_quote_after>30</delete_quote_after>
            </general>
        </sidwishlist>
    </default>
    
    <crontab>
        <jobs>
            <sidwishlist_clean_quotes>
                <schedule>
                    <!--Debug-->
                    <cron_expr>0,15,30,45 * * * *</cron_expr>
                    <!--Production-->
                    <!--<cron_expr>45 0 * * *</cron_expr>-->
                </schedule>
                <run>
                    <model>sidwishlist/quote_observer::cleanExpiredQuotes</model>
                </run>
            </sidwishlist_clean_quotes>
        </jobs>
    </crontab>
</config>
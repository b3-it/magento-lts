?>

<?php $_items = $this->getItemsCollection(); ?>
<?php echo $this->getChildHtml('pager'); ?>
<?php if(count($_items)): ?>
<table id="my-orders-table" class="cart-table data-table linearize-table-large" summary="<?php echo $this->__('Items Subcribed') ?>">
    <colgroup>
    	<col style="" />
    	<col style="width:5%" />
    	<col style="width:10%" />
    </colgroup>
    <thead>
        <tr>
            <th><?php echo $this->__('Product features') . '<br />' . $this->__('order information') ?></th>
            <th class="dwd-abo-link"><?php echo $this->__('Link') ?></th>
            <th><?php echo $this->__('Status')  . ' /<br />' . $this->__('Action'); ?></th>
        </tr>
    </thead>

    <?php foreach ($_items as $_item): ?>
    <?php if ($_item->getParentItem()) continue; ?>
    <tbody>
        <tr>
            <td class="product-cart-info">
		        <h2 class="mobile-product-name"><a href=""><?php echo $this->escapeHtml($_item->getName()) ?></a></h2>
		        <h2 class="product-name"><a href=""><?php echo $this->escapeHtml($_item->getName()) ?></a></h2>
		        <div class="product-cart-sku">
		            <span class="label"><?php echo $this->__('SKU short'); ?>:</span> <?php echo $this->escapeHtml($_item->getSku()); ?>
		        </div>
		        <div class="mobile-product-collateral">
		            <?php echo $this->__('Status') . ': ' . $this->getItemStatus($_item); ?>
		        </div>
		      <?php if( $_item->getStation() != '' ): ?>
        	    <div class="std small dwd-orderitem-options">
        	        <?php echo $this->__('Station') . ": " . $_item->getStation();?> (<?php echo $_item->getStationskennung();?>)
        	    </div>
              <?php endif;?>
                <div class="std small dwd-orderitem-options">
                    <?php echo $this->__('to') . " " . $_item->getStopDateFormated();?>
                </div>
                <div class="std small dwd-orderitem-options">
                    <?php echo $this->__('Order') . ": " . $_item->getBestellnummer();?>
                    (<?php echo $this->formatItemDate($_item->getOrderDate());?>)
                </div>
              <?php if($_item->getBestellnummer() != $_item->getInitialBestellnummer() ): ?>
                <div class="std small dwd-orderitem-options">
                    <?php echo $this->__('Initial Order') . ": " . $_item->getInitialBestellnummer(); ?> 
                    (<?php echo $this->formatItemDate($_item->getInitialOrderDate());?>)
                </div>
              <?php endif; ?>
                <div class="mobile-product-collateral">
                  <a href="<?php echo $this->getApplicationUrl($_item);?>" target="_blank"><?php echo $this->__('Link to application'); ?></a>
              	</div>
            </td>
            <td class="dwd-abo-link">
                <a href="<?php echo $this->getApplicationUrl($_item);?>" target="_blank"><?php echo $this->__('Link to application'); ?></a>
            </td>
            <td class="dwd-abo-actions">
                <?php echo $this->getItemStatus($_item);?>
                <br /><br />
                <?php if ($this->canAboCancel($_item)):?>
                <a href="<?php echo $this->getCancelUrl($_item->getAboId())?>" onClick="return confirm('<?php echo $this->__('Are you sure you want to delete your subscription?')?>')" >
                    <?php echo $this->__('Cancel subscribe') ?>
                </a>
              	<?php endif;?>
            </td>
        </tr>
    </tbody>
    <?php endforeach; ?>
</table>
<script type="text/javascript">decorateTable('my-orders-table', {'tbody' : ['odd', 'even'], 'tbody tr' : ['first', 'last']})</script>
<?php else: ?>
<p><?php echo Mage::helper('dwd_abo')->__('You do not have any Abo yet.'); ?></p>
<?php endif;?>
<?php echo $this->getChildHtml('pager'); ?>

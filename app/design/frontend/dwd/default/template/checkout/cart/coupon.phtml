<div class="cart-coupon">
    <form id="discount-coupon-form" action="<?php echo $this->getFormActionUrl() ?>" method="post">
        <div class="discount">
            <h2><?php echo $this->__('Discount Codes') ?></h2>
            <div class="discount-form">
                <input type="hidden" id="remove" id="remove-coupone" value="0" />
                <div class="field-wrapper">
                    <label for="coupon_code"><?php echo $this->__('Discount Codes') ?></label>
                    <input class="input-text" type="text" id="coupon_code" id="coupon_code" value="<?php echo $this->escapeHtml($this->getCouponCode()) ?>" />
                    <div class="button-wrapper">
                        <button type="button"
                                title="<?php echo Mage::helper('core')->quoteEscape($this->__('Apply')) ?>"
                                class="button<?php if(!strlen($this->getCouponCode())) { ?> full-width<?php } ?>"
                                onclick="discountForm.submit(false)"
                                value="<?php echo $this->__('Apply') ?>">
                            <span><?php echo $this->__('Apply') ?></span>
                        </button>
                    <?php if(strlen($this->getCouponCode())): ?>
                        <button type="button"
                                title="<?php echo Mage::helper('core')->quoteEscape($this->__('Cancel')) ?>"
                                class="button cancel-coupon"
                                onclick="discountForm.submit(true)"
                                value="<?php echo $this->__('Cancel') ?>">
                            <span><?php echo $this->__('Cancel') ?></span>
                        </button>
                    <?php endif;?>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <script type="text/javascript">
    //<![CDATA[
    var discountForm = new VarienForm('discount-coupon-form');
    discountForm.submit = function (isRemove) {
        if (isRemove) {
            $('coupon_code').removeClassName('required-entry');
            $('remove-coupone').value = "1";
        } else {
            $('coupon_code').addClassName('required-entry');
            $('remove-coupone').value = "0";
        }
        return VarienForm.prototype.submit.bind(discountForm)();
    }
    //]]>
    </script>
</div>
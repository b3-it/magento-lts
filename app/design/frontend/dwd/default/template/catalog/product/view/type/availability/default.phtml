$_product = $this->getProduct(); ?>
<?php if ($this->displayProductStockStatus() && $_product->getStockItem()->getManageStock()): ?>
        <p class="availability">
        <?php if ($_product->isAvailable()): ?>
            <span class="label"><?php echo $this->helper('catalog')->__('Availability:') ?></span>
            <span class="value in-stock"><?php echo $this->helper('catalog')->__('In stock') ?></span>
        <?php else: ?>
            <span class="label"><?php echo $this->helper('catalog')->__('Availability:') ?></span>
            <span class="value out-of-stock"><?php echo $this->helper('catalog')->__('Out of stock') ?></span>
        <?php endif; ?>
        </p>
<?php endif; ?>

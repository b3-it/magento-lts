<?xml version="1.0"?>
<layout>
    <default>
        <reference name="head">
            <remove name="silver_track" />
 
            <action method="addJs">
            	<script>egovs/jquery.touchSelect.js</script>
           	</action>
           
            <action method="removeItem">
                <type>skin_js</type>
                <name>js/app_egov.js</name>
            </action>

            <action method="addItem">
                <type>skin_js</type>
                <name>js/jquery-ui.min.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/app_dwd.js</name>
            </action>
        </reference>

        <reference name="header">
            <block type="core/template" name="dwd_login_logout_links" as="dwdLoginLogoutLinks" template="page/html/login-logout-buttons.phtml" />
        </reference>

        <reference name="left">
            <remove name="catalog.leftnav" />
            <remove name="cart_sidebar" />
            
            <block type="checkout/cart_sidebar" name="cart_sidebar_dwd" template="checkout/cart/sidebar.phtml" before="-">
                <action method="addItemRender"><type>simple</type><block>checkout/cart_item_renderer</block><template>checkout/cart/sidebar/default.phtml</template></action>
                <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>checkout/cart/sidebar/default.phtml</template></action>
                <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>checkout/cart/sidebar/default.phtml</template></action>
                <block type="core/text_list" name="cart_sidebar.extra_actions" as="extra_actions" translate="label" module="checkout">
                    <label>Shopping Cart Sidebar Extra Actions</label>
                </block>
            </block>
        </reference>
        
        <reference name="product.info.additional">
            <remove name="product_tag_list" />
        </reference>
        
        <reference name="content">
            <!-- zusätzliche Miniatur-Ansichten entfernen -->
            <remove name="product.info.media" />
        </reference>
        
        <reference name="footer">
            <remove name="cms_footer_links" />
            <remove name="footer_links" />
            <remove name="footer_links2" />
            
            <block type="cms/block" name="dwd_cms_footer_rechts" before="-">
                <action method="setBlockId"><block_id>dwd_footer_rechts</block_id></action>
            </block>
            <block type="cms/block" name="dwd_cms_footer_mitte" before="dwd_cms_footer_rechts">
                <action method="setBlockId"><block_id>dwd_footer_mitte</block_id></action>
            </block>
            <block type="cms/block" name="dwd_cms_footer_links" before="dwd_cms_footer_mitte">
                <action method="setBlockId"><block_id>dwd_footer_links</block_id></action>
            </block>
        </reference>
        
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
    </default>
    
    <catalog_product_view translate="label">
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
    </catalog_product_view>
    
    <catalogsearch_result_index translate="label">
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
    </catalogsearch_result_index>
    
    <checkout_cart_index>
        <!-- Rabattcodes im Warenkorb raus -->
        <reference name="checkout.cart">
            <action method="unsetChild"><name>coupon</name></action>
        </reference>
        
        <!-- Neue Rabattcodes in Warenkorb, sind aktuell nur für DWD -->
        <reference name="checkout.cart">
            <block type="mpcheckout/cart_coupon" name="checkout.cart.coupon" as="coupon" after="methods" template="checkout/cart/coupon.phtml"/>
        </reference>
    </checkout_cart_index>
    
    <catalogsearch_result_index>
        <reference name="left_first">
            <remove name="catalogsearch.leftnav" />
        </reference>
    </catalogsearch_result_index>
    
    <catalog_product_view>
        <reference name="head">
            <action method="removeItem">
                <type>skin_js</type>
                <name>js/app_egov.js</name>
            </action>
            <action method="removeItem">
            	<type>js_css</type>
            	<name>calendar/calendar-win2k-1.css</name>
            </action>
            <action method="removeItem">
            	<type>js</type>
                <name>calendar/calendar.js</name>
            </action>
            <action method="removeItem">
            	<type>js</type>
            	<name>calendar/calendar-setup.js</name>
            </action>
        </reference>
    </catalog_product_view>

    
    <customer_account>
        <reference name="customer_account_navigation">
            <action method="removeLinkByName"><name>billing_agreements</name></action>
            <action method="removeLinkByName"><name>recurring_profiles</name></action>
            <action method="removeLinkByName"><name>OAuth Customer Tokens</name></action>
        </reference>

        <!-- cart_sidebar does need to be over the account navigation -->

        <reference name="left_first">
            <action method="insert">
                <blockName>cart_sidebar_dwd</blockName>
            </action>
        </reference>

        <reference name="left">
            <action method="unsetChild">
                <alias>cart_sidebar_dwd</alias>
             </action>
        </reference>
    </customer_account>

    <sales_order_view translate="label">
        <reference name="order_totals">
            <action method="setLabelProperties">
                <value>colspan="3" class="a-right"</value>
            </action>
        </reference>
    </sales_order_view>

</layout>

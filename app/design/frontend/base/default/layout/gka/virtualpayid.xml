<layout version="0.1.0">
    <PRODUCT_TYPE_virtualpayid translate="label" module="virtualpayid">
       <label>Catalog Product View (Virtual)</label>
       <reference name="product.info">
       		<block type="virtualpayid/catalog_product_view_type" name="product.info.virtualpayid" as="product_type_data" template="gka/virtualpayid/catalog/product/view/type.phtml">
            </block>
            <reference name="product.info.addtocart">
                <action method="setTemplate"> <template>gka/virtualpayid/catalog/product/view/addtocart.phtml</template> </action>
            </reference>
        </reference>
    </PRODUCT_TYPE_virtualpayid>

    <checkout_cart_index>
        <reference name="checkout.cart">
            <action method="addItemRender"><type>virtualpayid</type><block>virtualpayid/checkout_cart_item_renderer</block><template>gka/virtualpayid/checkout/cart/item/default.phtml</template></action>
        </reference>
    </checkout_cart_index>
    
    <egovs_checkout_singlepage_overview>
        <reference name="checkout_overview">
            <action method="addItemRender"><type>virtualpayid</type><block>virtualpayid/checkout_cart_item_renderer</block><template>gka/virtualpayid/checkout/onepage/review/item.phtml</template></action>
        </reference>
    </egovs_checkout_singlepage_overview>
   
    <egovs_checkout_singlepage_successview>
        <reference name="checkout_successview">
            <action method="addItemRender"><type>virtualpayid</type><block>virtualpayid/checkout_cart_item_renderer</block><template>gka/virtualpayid/checkout/onepage/review/item.phtml</template></action>
        </reference>
    </egovs_checkout_singlepage_successview> 

    <sales_order_view>
        <reference name="order_items">
            <action method="addItemRender"><type>virtualpayid</type><block>virtualpayid/sales_item_renderer</block><template>gka/virtualpayid/sales/items/renderer/renderer.phtml</template></action>
        </reference>
    </sales_order_view>
    
    <sales_email_order_items>
        <reference name="items">
            <action method="addItemRender"><type>virtualpayid</type><block>virtualpayid/sales_email_items_order_type</block><template>gka/virtualpayid/email/order/items/order/type.phtml</template></action>
        </reference>
    </sales_email_order_items>
    
    <sales_email_order_invoice_items>
        <reference name="items">
            <action method="addItemRender"><type>virtualpayid</type><block>virtualpayid/sales_email_items_type</block><template>gka/virtualpayid/email/order/items/invoice/type.phtml</template></action>
        </reference>
    </sales_email_order_invoice_items>
    
    <sales_email_order_creditmemo_items>
        <reference name="items">
            <action method="addItemRender"><type>virtualpayid</type><block>virtualpayid/sales_email_items_type</block><template>gka/virtualpayid/email/order/items/creditmemo/type.phtml</template></action>
        </reference>
    </sales_email_order_creditmemo_items>
    
    <!--
    Pro Produkttyp müssen die entsprechende Blöcke zur Anzeige von Preisen angepasst werden!
    Wichtig für neue Produkttypen!! 
     -->
    <default>
        <reference name="catalog_product_price_template">
            <action method="addPriceBlockType">
                <type>virtualpayid</type>
                <block>egovsready/catalog_product_price</block>
                <template>catalog/product/price.phtml</template>
            </action>
        </reference>

 
    </default>

    <!-- Preisblock für Steuer und Versandkosten hinzufügen -->

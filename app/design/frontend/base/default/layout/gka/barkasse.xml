<layout version="0.1.0">


<!-- kassenbuch_journal -->

    <customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="gka_barkasse">
                <name>kassenbuch_journal</name>
                <path>gka_barkasse/kassenbuch_journal/index</path>
                <label>Cash Journal</label>
            </action>
        </reference>
    </customer_account>

    <gka_barkasse_kassenbuch_journal_index translate="label">
        <label>Kassenbuch Journal</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="gka_barkasse/kassenbuch_journal" name="kassenbuch_journal" template="gka/barkasse/kassenbuch/journal/index.phtml" >
                 <block type="gka_barkasse/kassenbuch_journal_grid" name="journal_details">
                    <label>Order History Info</label>
                </block>
            </block>
        </reference>
        <reference name="root">
            <action method="setHeaderTitle" translate="title" module="gka_barkasse"><title>Kassenbuch Journal</title></action>
        </reference>
        <reference name="head">
            <action method="addJs"><script>mage/adminhtml/grid.js</script></action>
            <action method="addJs"><script>mage/adminhtml/hash.js</script></action>
             <action method="addItem"><type>js_css</type><name>calendar/calendar-win2k-1.css</name></action>
            <action method="addItem"><type>js</type><name>calendar/calendar.js</name></action>
            <action method="addItem"><type>js</type><name>calendar/calendar-setup.js</name></action>
            <block type="core/html_calendar" name="html_calendar" as="html_calendar" template="page/js/calendar.phtml" />
        </reference>
    </gka_barkasse_kassenbuch_journal_index>
    <gka_barkasse_kassenbuch_journalitems_index translate="label">
        <label>Kassenbuch Journaldetails</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="gka_barkasse/kassenbuch_journalitems" name="kassenbuch_journal" template="gka/barkasse/kassenbuch/journalitems/index.phtml" >
                 <block type="gka_barkasse/kassenbuch_journalitems_grid" name="journal_details">
                    <label>Order History Info</label>
                </block>
            </block>
        </reference>
        <reference name="root">
            <action method="setHeaderTitle" translate="title" module="gka_barkasse"><title>Kassenbuch Journaldetails</title></action>
        </reference>
        <reference name="head">
            <action method="addJs"><script>mage/adminhtml/grid.js</script></action>
            <action method="addJs"><script>mage/adminhtml/hash.js</script></action>
        </reference>
    </gka_barkasse_kassenbuch_journalitems_index>




</layout>

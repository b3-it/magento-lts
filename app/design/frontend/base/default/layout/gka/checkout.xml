<layout version="0.1.0">

<!--
Default layout, loads most of the pages
-->

    <default>
        <!-- Mage_Checkout -->
        <reference name="top.links">
            <block type="checkout/links" name="checkout_cart_link">
                <action method="addCartLink"></action>
                <action method="addCheckoutLink"></action>
            </block>
        </reference>

        <reference name="header">
            <block type="checkout/cart_minicart" name="minicart_head" template="checkout/cart/minicart.phtml" before="-">
                <block type="checkout/cart_sidebar" name="minicart_content" template="checkout/cart/minicart/items.phtml">
                    <action method="addItemRender"><type>default</type><block>checkout/cart_item_renderer</block><template>checkout/cart/minicart/default.phtml</template></action>
                    <action method="addItemRender"><type>simple</type><block>checkout/cart_item_renderer</block><template>checkout/cart/minicart/default.phtml</template></action>
                    <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>checkout/cart/minicart/default.phtml</template></action>
                    <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>checkout/cart/minicart/default.phtml</template></action>

                    <block type="core/text_list" name="cart_sidebar.cart_promotion" as="cart_promotion" translate="label" module="checkout">
                        <label>Mini-cart promotion block</label>
                    </block>
                    <block type="core/text_list" name="cart_sidebar.extra_actions" as="extra_actions" translate="label" module="checkout">
                        <label>Shopping Cart Sidebar Extra Actions</label>
                    </block>
                </block>
            </block>
        </reference>

        <reference name="right">
            <block type="gkacheckout/cart_sidebar" name="cart_sidebar" template="checkout/cart/sidebar.phtml" before="-">
                <action method="addItemRender"><type>simple</type><block>checkout/cart_item_renderer</block><template>checkout/cart/sidebar/default.phtml</template></action>
                <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>checkout/cart/sidebar/default.phtml</template></action>
                <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>checkout/cart/sidebar/default.phtml</template></action>
            </block>
        </reference>
    </default>

    <checkout_cart_index>
        <remove name="right"/>
		<remove name="breadcrumbs"/>		
  
        <!-- Mage_Checkout -->
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="gkacheckout/cart_cart" name="checkout.cart">
				<action method="setData"><key>accesskey</key><value>i</value></action>
               	<action method="setData"><key>jumptitle</key><value>Warenkorb-Inhalt</value></action>

                <action method="setCartTemplate"><value>checkout/cart.phtml</value></action>
                <action method="setEmptyTemplate"><value>checkout/cart/noItems.phtml</value></action>
                <action method="chooseTemplate"/>
                <action method="addItemRender"><type>simple</type><block>checkout/cart_item_renderer</block><template>checkout/cart/item/default.phtml</template></action>
                <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>checkout/cart/item/default.phtml</template></action>
                <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>checkout/cart/item/default.phtml</template></action>
<!-- 
                <block type="core/text_list" name="checkout.cart.top_methods" as="top_methods">
                    <block type="checkout/onepage_link" name="checkout.cart.methods.onepage" template="checkout/onepage/link.phtml"/>
                </block>
 -->
                <block type="core/text_list" name="checkout.cart.methods" as="methods" />
             
				
                <block type="checkout/cart_coupon" name="checkout.cart.coupon" as="coupon" template="checkout/cart/coupon.phtml"/>
				<!-- 
                <block type="checkout/cart_shipping" name="checkout.cart.shipping" as="shipping" template="checkout/cart/shipping.phtml"/>
                <block type="checkout/cart_crosssell" name="checkout.cart.crosssell" as="crosssell" template="checkout/cart/crosssell.phtml"/>
 -->
                <block type="checkout/cart_totals" name="checkout.cart.totals" as="totals" template="checkout/cart/totals.phtml">
				<action method="setData"><key>accesskey</key><value>b</value></action>
               	<action method="setData"><key>jumptitle</key><value>Bestellung aufgeben</value></action>				
				</block>
            </block>
        </reference>
    </checkout_cart_index>






<!--
Multi address shipping checkout main layout,
will be rendered on all checkout pages
-->

    <checkout_singlepage>
        <!-- Mage_Checkout -->
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
 
    </checkout_singlepage>

 



    <checkout_singlepage_overview>
        <update handle="checkout_singlepage"/>
        <!-- Mage_Checkout -->
        
          <reference name="root">
            <action method="addBodyClass"><classname>mp-checkout</classname></action>
        </reference>
        
        <reference name="head">
    		<action method="addJs"><script>lib/jquery/jquery-ui-1.12.1.js</script></action>
    		<action method="addItem"><type>js_css</type><name>lib/jquery/jquery-ui-1.12.1.css</name></action>
    		<action method="addItem"><type>skin_js</type><name>js/overview.js</name></action>
    		<action method="addItem"><type>skin_js</type><name>js/barkasse.js</name></action>
    		<action method="setTitle"><value>Gebührenkasse</value></action>
    	</reference>
        <reference name="content">
            <block type="gkacheckout/singlepage_overview" name="checkout_overview" template="checkout/singlepage/overview.phtml">
                <action method="addItemRender"><type>default</type><block>checkout/cart_item_renderer</block><template>checkout/onepage/review/item.phtml</template></action>
                <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>checkout/onepage/review/item.phtml</template></action>
                <action method="addItemRender"><type>bundle</type><block>bundle/checkout_cart_item_renderer</block><template>checkout/onepage/review/item.phtml</template></action>
                <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>checkout/onepage/review/item.phtml</template></action>
                <action method="addItemRender"><type>virtualpayid</type><block>virtualpayid/checkout_cart_item_renderer</block><template>gka/virtualpayid/checkout/onepage/review/item.phtml</template></action>
                <block type="gkacheckout/singlepage_payment" name="singlepage_payment" template="checkout/singlepage/payment.phtml"/>
                <block type="gkacheckout/singlepage_shipping" name="singlepage_shipping" template="checkout/singlepage/shipping.phtml"/>
                <block type="gkacheckout/singlepage_billing" name="singlepage_billing" template="checkout/singlepage/billing.phtml"/>
            </block>
        </reference>
    </checkout_singlepage_overview>

<!--
Multi address shipping checkout success
-->

    <checkout_singlepage_success>
     
        <update handle="checkout_singlepage"/>
        <!-- Mage_Checkout -->
        <reference name="head">
    		<action method="addCss"><stylesheet>css/print.css</stylesheet><params>media="print"</params></action>
    		<action method="setTitle"><value>Gebührenkasse</value></action>
    	</reference>
        <reference name="content">
            <block type="gkacheckout/singlepage_success" name="checkout_success" template="checkout/singlepage/success.phtml">
                    <block type="sales/order_items" name="order_items" template="checkout/singlepage/success/items.phtml">
                    <action method="addItemRender"><type>default</type><block>sales/order_item_renderer_default</block><template>checkout/singlepage/success/renderer/default.phtml</template></action>
                    <action method="addItemRender"><type>grouped</type><block>sales/order_item_renderer_grouped</block><template>checkout/singlepage/success/renderer/default.phtml</template></action>
                    <block type="gkacheckout/singlepage_success_totals" name="order_totals" template="checkout/singlepage/success/totals.phtml">
                        <action method="setLabelProperties"><value>colspan="3" class="a-right"</value></action>
                        <action method="setValueProperties"><value>class="last a-right"</value></action>
                        <block type="tax/sales_order_tax" name="tax" template="tax/order/tax.phtml" />
                    </block>
                </block>
            
            </block>
        </reference>
    </checkout_singlepage_success>



</layout>

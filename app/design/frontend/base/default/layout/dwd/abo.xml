<layout version="0.1.0">    
    <default>
    </default>

    <customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="dwd_abo"><name>abo_account</name><path>dwd_abo/index/view</path><label>My Weather Subscription</label></action>
        </reference>
    </customer_account>
    
    <dwd_abo_index_view translate="label">
        <label>My Weather Subscription</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="dwd_abo/customer_account_view" name="abo_info" template="dwd/abo/view.phtml" >
                <block type="dwd_abo/customer_account_items" name="abo_details" template="dwd/abo/items.phtml">
                    <label>Order History Info</label>
                </block>
            </block>
        </reference>
        <reference name="root">
            <action method="setHeaderTitle" translate="title" module="dwd_abo"><title>My Weather Subscription</title></action>
        </reference>

		<reference name="breadcrumbs">
		   <action method="addCrumb">
		      <crumbname>Home</crumbname>
		      <crumbinfo>
		         <label>Home</label>
		         <title>Home</title>
		         <url>/</url>
		      </crumbinfo>
		   </action>
		   <action method="addCrumb">
		      <crumbname>My Account</crumbname>
		      <crumbinfo>
		         <label>My Account</label>
		         <title>My Account</title>
		         <url>customer/account/</url>
		      </crumbinfo>
		   </action>
		   <action method="addCrumb">
		      <crumbname>My Weather Subscription</crumbname>
		      <crumbinfo>
		         <label>My Weather Subscription</label>
		         <title>My Weather Subscription</title>
		      </crumbinfo>
		   </action>
		</reference>
    </dwd_abo_index_view> 
</layout>

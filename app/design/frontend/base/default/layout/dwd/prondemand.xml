<layout version="0.1.0">

    
    <checkout_cart_index>
        <reference name="checkout.cart">
            <action method="addItemRender"><type>prondemand</type><block>prondemand/checkout_cart_item_renderer</block><template>dwd/prondemand/checkout/cart/item/default.phtml</template></action>
        </reference>
    </checkout_cart_index>
    
    <egovs_checkout_multipage_overview>
        <reference name="checkout_overview">
            <action method="addItemRender"><type>prondemand</type><block>prondemand/checkout_cart_item_renderer</block><template>dwd/prondemand/checkout/onepage/review/item.phtml</template></action>
        </reference>
    </egovs_checkout_multipage_overview>
   
    <egovs_checkout_multipage_successview>
         <reference name="checkout_successview">
           <action method="addItemRender"><type>prondemand</type><block>prondemand/checkout_cart_item_renderer</block><template>dwd/prondemand/checkout/onepage/review/item.phtml</template></action>
        </reference> 
    </egovs_checkout_multipage_successview> 
    
    <downloadable_customer_products translate="label">
        <reference name="my.account.wrapper">
            <action method="unsetChild"><name>downloadable_customer_products_list</name></action>
            <block type="prondemand/customer_products_list" name="downloadable_customer_products_list" template="downloadable/customer/products/list.phtml">
                <action method="setData"><key>accesskey</key><value>i</value></action>
                <action method="setData"><key>jumptitle</key><value>Inhalt/Anzeige</value></action>			
            </block>
        </reference>
    </downloadable_customer_products>
    
    <PRODUCT_TYPE_prondemand translate="label" module="prondemand">
        <label>Catalog Product View (Product On Demand)</label>
        <reference name="product.info">
            <block type="downloadable/catalog_product_view_type" name="product.info.prondemand" as="product_type_data" template="downloadable/catalog/product/type.phtml">
                <block type="downloadable/catalog_product_samples" name="product.info.prondemand.samples" as="samples" template="downloadable/catalog/product/samples.phtml"/>
                <block type="cataloginventory/stockqty_default" name="product.info.prondemand.extra" as="product_type_data_extra" template="cataloginventory/stockqty/default.phtml"/>
            </block>
        </reference>
    </PRODUCT_TYPE_prondemand>
    
    
    <sales_email_order_items>
        <reference name="items">
            <action method="addItemRender"><type>prondemand</type><block>prondemand/sales_email_items_order_prondemand</block><template>dwd/prondemand/email/order/items/order/prondemand.phtml</template></action>
        </reference>
    </sales_email_order_items>
    
    <sales_email_order_invoice_items>
        <reference name="items">
            <action method="addItemRender"><type>prondemand</type><block>prondemand/sales_email_items_prondemand</block><template>dwd/prondemand/email/order/items/invoice/prondemand.phtml</template></action>
        </reference>
    </sales_email_order_invoice_items>
    
    <sales_email_order_creditmemo_items>
        <reference name="items">
            <action method="addItemRender"><type>prondemand</type><block>prondemand/sales_email_items_prondemand</block><template>dwd/prondemand/email/order/items/creditmemo/prondemand.phtml</template></action>
        </reference>
    </sales_email_order_creditmemo_items>
    
    <!--
    Pro Produkttyp müssen die entsprechende Blöcke zur Anzeige von Preisen angepasst werden!
    Wichtig für neue Produkttypen!! 
     -->
    <default>
        <reference name="catalog_product_price_template">
            <action method="addPriceBlockType">
                <type>prondemand</type>
                <block>egovsready/catalog_product_price</block>
                <template>catalog/product/price.phtml</template>
            </action>
        </reference>

        <reference name="wishlist_sidebar">
            <action method="addPriceBlockType">
                <type>prondemand</type>
                <block>egovsready/catalog_product_price</block>
                <template>catalog/product/price.phtml</template>
            </action>
        </reference>
    </default>

    <!-- Preisblock für Steuer und Versandkosten hinzufügen -->
    <catalog_category_default>
        <reference name="product_list">
            <action method="addPriceBlockType">
                <type>prondemand</type>
                <block>egovsready/catalog_product_price</block>
                <template>catalog/product/price.phtml</template>
            </action>
        </reference>
    </catalog_category_default>

    <catalog_category_layered>
        <reference name="product_list">
            <action method="addPriceBlockType">
                <type>prondemand</type>
                <block>egovsready/catalog_product_price</block>
                <template>catalog/product/price.phtml</template>
            </action>
        </reference>
    </catalog_category_layered>

    <catalog_category_view>
        <reference name="product_list">
            <action method="addPriceBlockType">
                <type>prondemand</type>
                <block>egovsready/catalog_product_price</block>
                <template>catalog/product/price.phtml</template>
            </action>
        </reference>
    </catalog_category_view>

    <catalog_product_compare_index>
        <reference name="catalog.compare.list">
            <action method="addPriceBlockType">
                <type>prondemand</type>
                <block>egovsready/catalog_product_price</block>
                <template>catalog/product/price.phtml</template>
            </action>
        </reference>
    </catalog_product_compare_index>

    <catalog_product_view>
        <reference name="catalog.product.related">
            <action method="addPriceBlockType">
                <type>prondemand</type>
                <block>egovsready/catalog_product_price</block>
                <template>catalog/product/price.phtml</template>
            </action>
        </reference>
    </catalog_product_view>

    <catalogsearch_advanced_result>
        <reference name="search_result_list">
            <action method="addPriceBlockType">
                <type>prondemand</type>
                <block>egovsready/catalog_product_price</block>
                <template>catalog/product/price.phtml</template>
            </action>
        </reference>
    </catalogsearch_advanced_result>

    <catalogsearch_result_index>
        <reference name="search_result_list">
            <action method="addPriceBlockType">
                <type>prondemand</type>
                <block>egovsready/catalog_product_price</block>
                <template>catalog/product/price.phtml</template>
            </action>
        </reference>
    </catalogsearch_result_index>

    <tag_product_list>
        <reference name="search_result_list">
            <action method="addPriceBlockType">
                <type>prondemand</type>
                <block>egovsready/catalog_product_price</block>
                <template>catalog/product/price.phtml</template>
            </action>
        </reference>
    </tag_product_list>

    <tag_customer_view>
        <reference name="customer_view">
            <action method="addPriceBlockType">
                <type>prondemand</type>
                <block>egovsready/catalog_product_price</block>
                <template>catalog/product/price.phtml</template>
            </action>
        </reference>
    </tag_customer_view>

    <PRODUCT_TYPE_prondemand>
        <reference name="product.info.downloadable.extra">
            <block type="downloadable/catalog_product_view_type" name="egovsready.deliverytime" template="egovs/ready/catalog/product/delivery_time.phtml" />
        </reference>
    </PRODUCT_TYPE_prondemand>
</layout>

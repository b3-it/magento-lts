<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE layout>
<layout version="0.1.0">
	 <checkout_onepage_index translate="label">
        <reference name="head">
            <action method="addJs"><script>egovs/sepa/de.js</script></action>
            <action method="addJs"><script>egovs/sepa/checkiban.js</script></action>
        </reference>
    </checkout_onepage_index> 
    <egovs_checkout_multipage_billingdetails translate="label">
        <reference name="head">
            <action method="addJs"><script>egovs/sepa/de.js</script></action>
            <action method="addJs"><script>egovs/sepa/checkiban.js</script></action>
        </reference>
    </egovs_checkout_multipage_billingdetails>
    
    <sepadebitbund_change_index>
        <update handle="customer_account"/>
        
        <reference name="head">
            <action method="addJs"><script>egovs/sepa/de.js</script></action>
            <action method="addJs"><script>egovs/sepa/checkiban.js</script></action>
        </reference>
        
        <reference name="content">
            <block type="sepadebitbund/account_index" name="sepadebitbund" template="egovs/debit/sepa_bund/customer_account_change.phtml" >
                <block type="sepadebitbund/account_info" name="info"/>
                <block type="sepadebitbund/account_form" name="form"/>
            </block>
        </reference>

		<reference name="breadcrumbs">
		   <action method="addCrumb">
		      <crumbname>Home</crumbname>
		      <crumbinfo>
		         <label>Home</label>
		         <title>Home</title>
		         <url>/</url>
		      </crumbinfo>
		   </action>
		   <action method="addCrumb">
		      <crumbname>My Account</crumbname>
		      <crumbinfo>
		         <label>My Account</label>
		         <title>My Account</title>
		         <url>customer/account/</url>
		      </crumbinfo>
		   </action>
		   <action method="addCrumb">
		      <crumbname>Change SEPA Mandate</crumbname>
		      <crumbinfo>
		         <label>Change SEPA Mandate</label>
		         <title>Change SEPA Mandate</title>
		      </crumbinfo>
		   </action>
		</reference>
    </sepadebitbund_change_index>
  
    
    <customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="sepadebitbund"><name>sepadebitbund_change</name><path>sepadebitbund/change/index</path><label>Change SEPA Mandate</label></action>
        </reference>
    </customer_account>
</layout>
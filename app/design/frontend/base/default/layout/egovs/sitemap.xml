<?xml version="1.0"?>
<!DOCTYPE layout>
<layout version="0.1.0">
    <catalog_seo_sitemap translate="label">
        <reference name="seo.sitemap.container">
            <remove name="seo.sitemap.links"/>
            <remove name="seo.sitemap.pager.top"/>
            <remove name="seo.sitemap.pager.bottom"/>
            <block type="egovssitemap/cms" name="seo.sitemap.cms" as="cms" template="egovs/sitemap/cms.phtml"/>
            <action method="setTitleSiteMap" translate="title" module="catalog">
                <title>Site Map</title>
            </action>
            <action method="setTitleSiteCms" translate="title" module="catalog">
                <title>General</title>
            </action>
        </reference>
    </catalog_seo_sitemap>
</layout>
?>
<?php $_product = $this->getProduct() ?>

<?php if( $_product->isSaleable() ): ?>
    <p class="availability"><?php echo $this->__('Availability') ?>: <span class="in-stock"><?php echo $this->__('In stock') ?></span></p>
<?php else: ?>
    <p class="availability"><?php echo $this->__('Availability') ?>: <span class="out-of-stock"><?php echo $this->__('Out of stock') ?></span></p>
<?php endif; ?>

<?php $_selectBox = trim( $this->getChildHtml('list') ); ?>

<?php if(strlen($_selectBox)): ?>
<div id="map-block">
  <div id="suggest-select">
    <?php if($this->showSuggestBox()) { echo $this->getChildHtml('suggest');}?>
    <?php echo $_selectBox; ?>
  </div>

  <?php if($this->showMap()) : ?>
  <div class="map_size map_pos">
    <?php echo $this->getChildHtml('map'); ?>
  </div>
  <?php endif; ?>
</div>
<script type="text/javascript" src="<?php echo $this->getSkinUrl('js/map-functions.js'); ?>"></script>
<?php endif; ?>

<?php echo $this->getChildHtml('periode') ?>
<?php 
	/*
	 * Suffix um zweite Preisanzeige im Frontend korrekt per JS zu aktualisieren.
	 * @see js/egovs/varien/product.js

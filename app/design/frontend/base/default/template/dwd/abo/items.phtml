 */
/* @var $this Dwd_Abo_Block_Customer_Account_Items */
?>

<?php $_items = $this->getItemsCollection(); ?>
<?php echo $this->getChildHtml('pager'); ?>
<?php if(count($_items)): ?>
<table class="data-table" id="my-orders-table" summary="<?php echo $this->__('Items Subcribed') ?>">
    <col  />
    <col  />
    <col width="1" />
    <col width="1" />
    <col width="1" />
    <thead>
        <tr>
            <th><?php echo $this->__('Product features') ?></th>
            <th><?php echo $this->__('order information') ?></th>
            <th><?php echo $this->__('Link') ?></th>
            <th><?php echo $this->__('Status') ?></th>
            <th style="width:100px;"><?php echo $this->__('Action') ?></th>
        </tr>
    </thead>

    <?php foreach ($_items as $_item): ?>
    <?php if ($_item->getParentItem()) continue; ?>
    <tbody>
        <tr>
            <td>
                <strong><?php echo $_item->getName();?></strong><br />
                 <?php echo $this->__('SKU short') ?>: <?php echo $_item->getSku();?><br />
        	    <?php if( $_item->getStation() != '' ): ?>
        	      <?php echo $this->__('Station') ?>:
        	      <?php echo $_item->getStation();?>
        	      (<?php echo $_item->getStationskennung();?>)
        	      <br />
        	    <?php endif;?>
                <?php echo $this->__('to') . " ". $_item->getStopDateFormated();?><br />
            </td>
            <td>
                <?php echo $this->__('Order') ?>: <?php echo $_item->getBestellnummer();?> (<?php echo $this->formatItemDate($_item->getOrderDate());?>)<br />
                <?php if($_item->getBestellnummer() != $_item->getInitialBestellnummer() ): ?>
                  <?php echo $this->__('Initial Order') ?>:  <?php echo $_item->getInitialBestellnummer();?> 
                  (<?php echo $this->formatItemDate($_item->getInitialOrderDate());?>)
                  <br />
                <?php endif; ?>
                <?php if ($this->canAboCancel($_item)):?>
                	<?php echo $this->__('Cancelation until') ?>: <?php echo $this->formatItemDateTime($_item->getCancelationPeriodEnd());?>
                <?php endif;?>
            </td>
            <td><a href="<?php echo $this->getApplicationUrl($_item);?>" target="_blank">Link</a></td>
            <td><?php echo $this->getItemStatus($_item);?></td>
            <td>
                <?php if ($this->canAboCancel($_item)):?>
                <a href="<?php echo $this->getCancelUrl($_item->getAboId())?>" onClick="return confirm('<?php echo $this->__('Are you sure you want to delete your subscription?')?>')" >
                    <?php echo $this->__('Cancel subscribe') ?>
                </a>
              	<?php endif;?>
            </td>
        </tr>
    </tbody>
    <?php endforeach; ?>
</table>
<script type="text/javascript">decorateTable('my-orders-table', {'tbody' : ['odd', 'even'], 'tbody tr' : ['first', 'last']})</script>
<?php else: ?>
<p><?php echo Mage::helper('dwd_abo')->__('You do not have any Abo yet.'); ?></p>
<?php endif;?>
<?php echo $this->getChildHtml('pager'); ?>

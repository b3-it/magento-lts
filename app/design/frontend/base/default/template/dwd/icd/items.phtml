 */
/* @var $this Dwd_Icd_Block_Customer_Credentials_Items */
?>
<?php $_items = $this->getItemsCollection(); ?>
<?php echo $this->getChildHtml('pager'); ?>
<?php if(count($_items)): ?>
<table class="data-table" id="my-orders-table" summary="<?php echo $this->__('Items Ordered') ?>">
    <col />
    <col />
    <col width="1" />
    <col width="1" />
    <col width="1" />
    <thead>
        <tr>
            <th><?php echo $this->__('Product features') ?></th>
            
            <th><?php echo $this->__('Url') ?></th>
            <th><?php echo $this->__('Status') ?></th>
            <th><?php echo $this->__('Login Name') ?></th>
            <th style="width:100px;"><?php echo $this->__('Action') ?></th>
        </tr>
    </thead>

    <?php foreach ($_items as $_item): ?>
    <?php if ($_item->getParentItem()) continue; ?>
    <tbody>
        <tr>
        	  <td>
        	      <strong><?php echo $_item->getName();?></strong><br />
        	      <?php echo $this->__('SKU short') ?>: <?php echo $_item->getSku();?><br />
        	       <?php echo $this->__('Order') ?>: <?php echo $_item->getBestellnummer();?> (<?php echo $this->formatItemDate($_item->getOrderDate());?>)<br />
        	      <?php if ( $_item->getOriginalIncrementId() ): ?> 
        	          <?php echo $this->__('Initial Order') ?>: <?php  echo $_item->getOriginalIncrementId() ?><br />
        	      <?php endif;?>
        	      
        	      <?php if( $_item->getStation() != '' ): ?>
        	        <?php echo $this->__('Station') ?>:
        	        <?php echo $_item->getStation();?>
        	        (<?php echo $_item->getStationskennung();?>)<br />
        	      <?php endif;?>
        	     
        	      <?php echo $this->__('Run Time') ?>: <?php echo str_replace(' - ', ' bis ', $this->getItemPeriode($_item));?>
        	  </td>
        
        	  <td><a href="<?php echo $this->getApplicationUrl($_item);?>" target="_blank">Link</a></td>
        	  <td><?php echo $this->getItemStatus($_item);?></td>
        	  <td><?php echo $_item->getLogin();?></td>
        	  <td>
        	      <?php if($_item->getStatus()== Dwd_Icd_Model_OrderStatus::ORDERSTATUS_ACTIVE):?>
        	      <a href="<?php echo $this->getUrl('dwd_icd/index/change',array('id'=>$_item->getAccountId()))?>">
        	          <?php echo $this->__('Change <br /> Password') ?>
        	      </a>
        	      <?php endif;?>
        	  </td>
        </tr>
    </tbody>
    <?php endforeach; ?>
</table>
<script type="text/javascript">decorateTable('my-orders-table', {'tbody' : ['odd', 'even'], 'tbody tr' : ['first', 'last']})</script>
<?php else: ?>
	<p><?php echo Mage::helper('downloadable')->__('You have not purchased any credentials yet.'); ?></p>
<?php endif;?>
<?php echo $this->getChildHtml('pager'); ?>

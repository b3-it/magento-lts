<?php $_items = $this->getItemsCollection(); ?>
<?php echo $this->getChildHtml('pager'); ?>
<?php if(count($_items)): ?>
<table class="data-table" id="my-orders-table" summary="<?php echo $this->__('Active Licenses') ?>">
    <col  />
    <col width="1" />
    <col width="1" />
    <col width="1" />
    <col width="1" />
    <thead>
        <tr>
            <th><?php echo $this->__('Title') ?></th>
            <th><?php echo $this->__('Date') ?></th>
            <th><?php echo $this->__('Product') ?></th>
            <th><?php echo $this->__('Status') ?></th>
            <th style="width:100px;"><?php echo $this->__('Action') ?></th>
        </tr>
    </thead>

    <?php foreach ($_items as $_item): ?>
     <tbody>
        <tr>
            <td>
                <strong><?php echo $_item->getTitleFe();?></strong><br />
            </td>
            <td>
                <?php echo $this->formatItemDate($_item->getDateFrom());?>
            </td>
            <td><?php echo $_item->getProductNames(); ?></td>
            <td><?php echo $this->getItemStatus($_item);?></td>
            <td>
                <?php $docs = $this->getLicenceDocs($_item->getId());?>
                <?php foreach($docs as $doc): ?>
                <a href="<?php echo $doc->getDownloadUrl()?>" > <?php echo $doc->getOrigFilename(); ?>
                </a>
              	<?php endforeach;?>
            </td>
        </tr>
    </tbody>
    <?php endforeach; ?>
</table>
<script type="text/javascript">decorateTable('my-orders-table', {'tbody' : ['odd', 'even'], 'tbody tr' : ['first', 'last']})</script>
<?php else: ?>
<p><?php echo Mage::helper('dwd_abo')->__('You do not have any Abo yet.'); ?></p>
<?php endif;?>

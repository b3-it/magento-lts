<?xml version="1.0"?>
<!DOCTYPE layout>
<layout version="0.1.0">
    <default>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-left.phtml</template>
            </action>
        </reference>

        <reference name="left">
            <remove name="cart_sidebar" />
            <remove name="catalog.leftnav" />
            <remove name="category_filter" />
        </reference>

        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>js/app_egov.js</name>
            </action>
        </reference>

        <reference name="content">
            <remove name="checkout.cart.coupon" />
            <remove name="coupon" />
        </reference>
    </default>
</layout>

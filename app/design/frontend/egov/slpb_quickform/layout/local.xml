<?xml version="1.0"?>
<!DOCTYPE layout>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addJs"><script>lib/jquery/jquery-1.10.2.min.js</script></action>
            <action method="addJs"><script>lib/jquery/noconflict.js</script></action>
            <action method="addJs"><script>slpb/star-counter.js</script></action>
        </reference>

        <reference name="header">
            <remove name="store_language" />
            <remove name="top.search" />
        </reference>

        <reference name="footer">
            <remove name="store_switcher" />
        </reference>
    </default>

    <catalog_product_view>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
    </catalog_product_view>
    
    <slpb_checkout_shop_addresses>
        <reference name="root">
            <action method="addBodyClass"><classname>egovs-checkout-multipage-newaddress</classname></action>
            <action method="addBodyClass"><classname>mp-checkout</classname></action>
        </reference>
    </slpb_checkout_shop_addresses>
    
    <slpb_checkout_shop_successview>
        <reference name="root">
            <action method="addBodyClass"><classname>egovs-checkout-multipage-successview</classname></action>
            <action method="addBodyClass"><classname>mp-checkout</classname></action>
        </reference>
    </slpb_checkout_shop_successview>
</layout>

<?php
/**
 * Product list template
 *
 * @see Mage_Catalog_Block_Product_List
 */
?>
<?php
    $_productCollection=$this->getLoadedProductCollection();
    $_params = $this->escapeHtml(json_encode(array('form_key' => $this->getFormKey())));
?>
<?php if(!$_productCollection->count()): ?>
<p class="note-msg"><?php echo $this->__('There are no products matching the selection.') ?></p>
<?php else: ?>
<div class="category-products">
    <?php echo $this->getToolbarHtml() ?>

    <?php // List mode ?>
    <?php if($this->getMode()!='grid'): ?>
    <?php $_iterator = 0; ?>
    <ol class="products-list" id="products-list">
    <?php foreach ($_productCollection as $_product): ?>
        <li class="item<?php if( ++$_iterator == sizeof($_productCollection) ): ?> last<?php endif; ?>">

        <?php // �nderung der Darstellung nach Hackel ?>
		<div class="productlistheading">
         <div class="std">
	            <?php echo $this->__('Sku').': '.$this->htmlEscape($_product->getSku()) ?>
	     </div>
         <div class="productlistleft">
         <h3 class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_product->getName()) ?>"><?php echo $this->htmlEscape($_product->getName())?></a></h3>
		 </div>
        </div>
        <?php // Ende Änderung der Darstellung nach Hackel ?>

            <?php // Product Image ?>
            <a class="product-image" href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($this->getImageLabel($_product, 'small_image')) ?>">
                <img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(135, 135); ?>" width="135" height="135" alt="<?php echo $this->htmlEscape($this->getImageLabel($_product, 'small_image')) ?>" title="<?php echo $this->htmlEscape($this->getImageLabel($_product, 'small_image')) ?>" /></a>

            <?php // Product description nach Hackel ?>
            <div class="product-descriptor">
             <div class="desc std">
                    <?php echo nl2br($_product->getShortDescription()) ?><br />
                    <a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_product->getName()) ?>"><?php echo $this->__('Learn More') ?></a>
                </div>
            </div>

            <div class="product-shop">

<!-- Nach oben verschoben                 <h3 class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_product->getName()) ?>"><?php echo $this->htmlEscape($_product->getName())?></a></h3>
                 <div class="std">
	            <?php echo $this->__('Sku').': '.$this->htmlEscape($_product->getSku()) ?>
	            </div>
Ende noch oben -->               
            	<?php if($_product->getRatingSummary()): ?>
                <?php echo $this->getReviewsSummaryHtml($_product) ?>
                <?php endif; ?>
                <?php echo $this->getPriceHtml($_product, true) ?>
                <?php if($_product->isSaleable()): ?>
                <p>
                    <a href="#"
                       title="<?php echo $this->quoteEscape($this->__('Add to Cart')) ?>"
                       class="egovslistbutton"
                       onclick="customFormSubmit(
                               '<?php echo $this->getAddToCartUrlCustom($_product, array('_secure' => $this->getRequest()->isSecure()), false) ?>',
                               '<?php echo $_params ?>',
                               'post')">
                        <span><?php echo $this->__('Add to Cart') ?></span>
                    </a>
                </p>
                <?php else: ?>
                <p class="availability"><span class="out-of-stock"><?php echo $this->__('Out of stock') ?></span></p>
                <?php endif; ?>
                <ul class="add-to-links">
                    <?php if ($this->helper('wishlist')->isAllow()) : ?>
                        <?php $_wishlistUrl = $this->helper('wishlist')->getAddUrlWithCustomParams($_product, array(), false); ?>
                        <li>
                            <a href="#"
                               data-url="<?php echo $_wishlistUrl ?>"
                               data-params="<?php echo $_params ?>"
                               title="<?php echo Mage::helper('core')->quoteEscape($this->__('Add to Wishlist')) ?>"
                               class="link-wishlist egov-star egov-float-left"
                               onclick="customFormSubmit('<?php echo $_wishlistUrl ?>', '<?php echo $_params ?>', 'post')">
                                <?php echo $this->__('Add to Wishlist') ?>
                            </a>
                        </li>
                    <?php endif; ?>
                    <?php if ($_compareUrl = $this->getAddToCompareUrlCustom($_product, false)) : ?>
                        <li>
                            <a href="#"
                               title="<?php echo Mage::helper('core')->quoteEscape($this->__('Add to Compare')) ?>"
                               class="link-compare egov-float-right"
                               onclick="customFormSubmit('<?php echo $_compareUrl ?>', '<?php echo $_params ?>', 'post')">
                                <?php echo $this->__('Add to Compare') ?>
                            </a>
                        </li>
                    <?php endif; ?>
                </ul>
            </div>
        </li>
    <?php endforeach; ?>
    </ol>
    <script type="text/javascript">decorateList('products-list', 'none-recursive')</script>

    <?php else: ?>

    <?php // Grid Mode ?>

    <?php $_collectionSize = $_productCollection->count() ?>
    <table class="products-grid" id="products-grid-table">
    <?php $_columnCount = $this->getColumnCount(); ?>
    <?php $i=0; foreach ($_productCollection as $_product): ?>
        <?php if ($i++%$_columnCount==0): ?>
        <tr>
        <?php endif ?>
            <td>
                <a class="product-image" href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($this->getImageLabel($_product, 'small_image')) ?>">
                    <img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(135, 135); ?>" width="135" height="135" alt="<?php echo $this->htmlEscape($this->getImageLabel($_product, 'small_image')) ?>" title="<?php echo $this->htmlEscape($this->getImageLabel($_product, 'small_image')) ?>" /></a>
                <h3 class="product-grid-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_product->getName()) ?>"><?php echo $this->htmlEscape($_product->getName()) ?></a></h3>
                  <div class="std">
	            <?php echo $this->__('Sku').': '.$this->htmlEscape($_product->getSku()) ?>
	            </div>

                <?php echo $this->getPriceHtml($_product, true) ?>
                <?php if($_product->isSaleable()): ?>
                    <a href="#"
                       title="<?php echo $this->quoteEscape($this->__('Add to Cart')) ?>"
                       class="egovsbutton"
                       onclick="customFormSubmit(
                               '<?php echo $this->getAddToCartUrlCustom($_product, array('_secure' => $this->getRequest()->isSecure()), false) ?>',
                               '<?php echo $_params ?>',
                               'post')">
                        <span><?php echo $this->__('Add to Cart') ?></span>
                    </a>
                <?php else: ?>
                    <p class="availability"><span class="out-of-stock"><?php echo $this->__('Out of stock') ?></span></p>
                <?php endif; ?>
                <ul class="add-to-links">
                    <?php if ($this->helper('wishlist')->isAllow()) : ?>
                        <?php $_wishlistUrl = $this->helper('wishlist')->getAddUrlWithCustomParams($_product, array(), false); ?>
                        <li>
                            <a href="#"
                               data-url="<?php echo $_wishlistUrl ?>"
                               data-params="<?php echo $_params ?>"
                               title="<?php echo Mage::helper('core')->quoteEscape($this->__('Add to Wishlist')) ?>"
                               class="link-wishlist egov-star egov-float-left"
                               onclick="customFormSubmit('<?php echo $_wishlistUrl ?>', '<?php echo $_params ?>', 'post')">
                                <?php echo $this->__('Add to Wishlist') ?>
                            </a>
                        </li>
                    <?php endif; ?>
                    <?php if ($_compareUrl = $this->getAddToCompareUrlCustom($_product, false)) : ?>
                        <li>
                            <a href="#"
                               title="<?php echo Mage::helper('core')->quoteEscape($this->__('Add to Compare')) ?>"
                               class="link-compare egov-float-right"
                               onclick="customFormSubmit('<?php echo $_compareUrl ?>', '<?php echo $_params ?>', 'post')">
                                <?php echo $this->__('Add to Compare') ?>
                            </a>
                        </li>
                    <?php endif; ?>
                </ul>
                    <?php echo $this->getReviewsSummaryHtml($_product, 'short') ?>
        		<?php if($_product->getRatingSummary()): ?>
                
               
                <?php endif; ?>                    
            </td>
        <?php if ($i%$_columnCount==0 && $i!=$_collectionSize): ?>
        </tr>
        <?php endif ?>
        <?php endforeach ?>
        <?php for($i;$i%$_columnCount!=0;$i++): ?>
              <td class="empty">&nbsp;</td>
        <?php endfor ?>
        <?php if ($i%$_columnCount==0): ?>
        </tr>
        <?php endif ?>
    </table>
    <script type="text/javascript">decorateTable('products-grid-table')</script>
    <?php endif; ?>
    <?php echo $this->getToolbarHtml() ?>
</div>
<?php endif; ?>

<?xml version="1.0"?>
<!DOCTYPE layout>
<layout version="0.1.0">
    <default>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>

        <reference name="left">
            <remove name="cart_sidebar" />
            <remove name="catalog.leftnav" />
        </reference>
        
        <reference name="head">
            <action method="addItem">
            	<type>skin_js</type>
            	<name>js/app_egov.js</name>
            </action>
        </reference>
    </default>

    <catalog_product_view>
        <reference name="product.info">
            <!-- Bewertungen in der Artikelansicht raus -->
            <remove name="product.reviews" />
        </reference>
    </catalog_product_view>

    <customer_account>
        <reference name="left">
            <action method="unsetChild"><name>catalog.compare.sidebar</name></action>
            <action method="unsetChild"><name>cart_sidebar</name></action>
            <action method="unsetChild"><name>sale.reorder.sidebar</name></action>
            <action method="unsetChild"><name>order</name></action>
        </reference>

        <reference name="customer_account_navigation">
            <action method="removeLinkByName"><name>OAuth Customer Tokens</name></action>
        </reference>

        <reference name="right">
            <action method="unsetChild"><name>sale.reorder.sidebar</name></action>
        </reference>
    </customer_account>

    <catalogsearch_result_index>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="left_first">
            <action method="unsetChild"><name>catalogsearch.leftnav</name></action>
        </reference>
    </catalogsearch_result_index>

    <egovs_checkout_multipage_overview>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
    </egovs_checkout_multipage_overview>

    <catalogsearch_advanced_result>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="search_result_list">
            <action method="setColumnCount"><count>3</count></action>
        </reference>
    </catalogsearch_advanced_result>

</layout>

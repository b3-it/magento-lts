<?xml version="1.0"?>
<!DOCTYPE layout>

<layout version="0.1.0">
    <default>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>

        <reference name="head">
            <action method="addJs"><script>lib/jquery/jquery-1.10.2.min.js</script></action>
            <action method="addJs"><script>lib/jquery/noconflict.js</script></action>
            <action method="addJs"><script>slpb/star-counter.js</script></action>
        </reference>
        
        <reference name="left">
            <remove name="cart_sidebar" />
        </reference>

        <reference name="footer_links2">
            <action method="addLink" translate="label title">
               <label>Delivery / Cost</label>
               <url helper="core/getCurrentUrl">bereitstellung</url>
               <title>Delivery / Cost</title>
            </action>
            <action method="addLink" translate="label title">
               <label>Ordering Conditions</label>
               <url helper="core/url/getUrl">bestellbedingungen</url>
               <title>Ordering Conditions</title>
            </action>
            <action method="addLink" translate="label title">
               <label>Privacy policy</label>
               <url helper="core/url/getUrl">datenschutz</url>
               <title>Privacy policy</title>
            </action>
            <action method="addLink" translate="label title">
               <label>Payment</label>
               <url helper="core/url/getUrl">zahlung</url>
               <title>Payment</title>
            </action>
        </reference>
    </default>

    <customer_account>
        <reference name="customer_account_navigation">
            <action method="removeLinkByName"><name>OAuth Customer Tokens</name></action>
        </reference>
    </customer_account>
    
    <catalog_product_view>
        <reference name="product.info">
            <!-- Bewertungen in der Artikelansicht raus -->
            <remove name="product.reviews" />
        </reference>
    </catalog_product_view>
    
    <checkout_cart_index>
        <!-- Rabattcodes im Warenkorb raus -->
        <remove name="checkout.cart.coupon" />
    </checkout_cart_index>

    <catalog_category_default>
        <reference name="right">
            <action method="unsetChild"><name>sale.reorder.sidebar</name></action>
            <action method="unsetChild"><name>reorder</name></action>
        </reference>
    </catalog_category_default>
    
    <catalogsearch_result_index>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="left_first">
            <action method="unsetChild"><name>catalogsearch.leftnav</name></action>
        </reference>
    </catalogsearch_result_index>
    
    <egovs_checkout_multipage_overview>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
    </egovs_checkout_multipage_overview>

    <customer_logged_in>
        <reference name="right">
            <action method="unsetChild"><name>sale.reorder.sidebar</name></action>
            <action method="unsetChild"><name>reorder</name></action>
        </reference>
    </customer_logged_in>

    <customer_account>
        <reference name="customer_account_navigation">
            <action method="removeLinkByName"><name>recurring_profiles</name></action>
            <action method="removeLinkByName"><name>billing_agreements</name></action>
            <action method="removeLinkByName"><name>debitpin_activate</name></action>
            <action method="removeLinkByName"><name>debitpin_change</name></action>
            <action method="removeLinkByName"><name>wishlist</name></action>
            <action method="removeLinkByName"><name>tags</name></action>
            <action method="removeLinkByName"><name>reviews</name></action>
        </reference>

        <reference name="left">
            <action method="unsetChild"><name>catalog.compare.sidebar</name></action>
            <action method="unsetChild"><name>cart_sidebar</name></action>
            <action method="unsetChild"><name>sale.reorder.sidebar</name></action>
            <action method="unsetChild"><name>order</name></action>
        </reference>

        <reference name="right">
            <action method="unsetChild"><name>sale.reorder.sidebar</name></action>
        </reference>
    </customer_account>

</layout>

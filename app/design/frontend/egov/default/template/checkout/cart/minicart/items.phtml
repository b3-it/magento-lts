 */
?>

<?php
$shippingCostUrl = Mage::helper( 'egovsready' )->getShippingCostUrl();
$_cartQty = $this->getSummaryCount();
if(empty($_cartQty)) {
    $_cartQty = 0;
}
if ( Mage::getStoreConfig('catalog/price/including_shipping_costs') ) {
    $_sIncludingShippingCosts = 'incl.';
} else {
    $_sIncludingShippingCosts = 'excl.';
}
?>
<div id="minicart-error-message" class="minicart-message"></div>
<div id="minicart-success-message" class="minicart-message"></div>

<div class="minicart-wrapper">

    <p class="block-subtitle">
        <?php echo $this->__('Recently added item(s)') ?>
        <a class="close skip-link-close" href="#" title="<?php echo $this->quoteEscape($this->__('Close')); ?>">&times;</a>
    </p>

    <?php $_items = $this->getRecentItems() ?>
    <?php $countItems = count($_items); ?>
    <?php if($countItems): ?>
        <div>
            <ul id="cart-sidebar" class="mini-products-list">
                <?php foreach($_items as $_item): ?>
                    <?php echo $this->getItemHtml($_item) ?>
                <?php endforeach; ?>
            </ul>
        </div>
        <script type="text/javascript">
            truncateOptions();
            decorateList('cart-sidebar', 'none-recursive');
            $j('document').ready(function() {
                var minicartOptions  = {
                    formKey:           "<?php echo $this->getFormKey();?>"
                }
                var Mini = new Minicart(minicartOptions);
                Mini.init();
            });
        </script>

        <div id="minicart-widgets">
            <?php echo $this->getChildHtml('cart_promotion') ?>
        </div>
        <div class="block-content">
            <p class="subtotal">
            <?php if ($this->canApplyMsrp()): ?>
                <span class="map-cart-sidebar-total">
                    <?php echo $this->__('ORDER TOTAL WILL BE DISPLAYED BEFORE YOU SUBMIT THE ORDER'); ?>
                </span>
                <?php else: ?>
                    <?php if (Mage::getStoreConfigFlag('checkout/sidebar/show_subtotal')): ?>
                        <span class="label">
                            <?php echo $this->__('Cart Subtotal:') ?>
                        </span>
                        <?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?>
                        <?php if ($_subtotalInclTax = $this->getSubtotalInclTax()): ?>
                        <br />(<?php echo Mage::helper('checkout')->formatPrice($_subtotalInclTax) ?> <?php echo Mage::helper('tax')->getIncExcText(true) ?>)
                    <?php endif; ?>
                <?php endif; ?>
            <?php endif; ?>
            </p>
            <div class="shipping-cost-details">
        		* <?php echo $this->__($_sIncludingShippingCosts . ' <a href="%s">Shipping Cost</a>', $shippingCostUrl) ?>
        	</div>
            <div class="shipping-cost-details">
                <?php
                $text = $this->escapeHtml(Mage::getStoreConfig('catalog/price/without_shipping_costs_text'));
                ?>
                ** <?php echo $this->__($text) ?>
            </div>
        </div>


        <div class="minicart-actions">
            <button class="button egov-float-left"
                    onclick="window.open('<?php echo $this->getUrl('checkout/cart', array('_secure' => $this->getRequest()->isSecure())); ?>','_self');">
                <?php echo $this->__('View Shopping Cart'); ?>
            </button>
        <?php if($_cartQty && $this->isPossibleOnepageCheckout()): ?>
            <button class="button egov-float-right"
                    onclick="window.open('<?php echo $this->getCheckoutUrl(); ?>','_self');"
                    title="<?php echo $this->quoteEscape($this->__('Checkout')) ?>">
                <?php echo $this->__('Checkout') ?>
            </button>
        <?php endif ?>
               <!--
                <ul class="checkout-types minicart">
                    <?php echo $this->getChildHtml('extra_actions') ?>
                    <li>
                    </li>
                </ul>
                -->
        </div>

    <?php else: ?>
        <p class="empty"><?php echo $this->__('You have no items in your shopping cart.') ?></p>

    <?php endif ?>
</div>

/**
 * @var $this Mage_Tax_Block_Checkout_Grandtotal
 * @see Mage_Tax_Block_Checkout_Grandtotal
 */

$_tollerace = 0.009;
$_totals = $this->getTotals();
$_hasZeroTax = true;
if (isset($_totals['tax'])) {
    $_hasZeroTax = ($_totals['tax']->getValue() <= $_tollerace);
}
?>
<?php if ($this->includeTax() && $this->getTotalExclTax()>=0):?>
<tr id="grandtotal-excl-tax">
    <td style="<?php echo $this->getStyle() ?>" class="a-right grandtotal-excl-tax grandtotal-label" colspan="<?php echo $this->getColspan(); ?>">
        <?php echo $this->helper('tax')->__('Grand Total Excl. Tax')?>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="a-right grandtotal-excl-tax grandtotal-value">
        <?php echo $this->helper('checkout')->formatPrice($this->getTotalExclTax()) ?>
    </td>
</tr>
<?php echo $this->renderTotals('taxes', $this->getColspan()); ?>
<tr id="grandtotal-incl-tax">
    <td style="<?php echo $this->getStyle() ?>" class="a-right grandtotal-incl-tax grandtotal-label" colspan="<?php echo $this->getColspan(); ?>">
        <?php echo $this->helper('tax')->__('Grand Total Incl. Tax')?>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="a-right subtotals-incl-tax grandtotal-value">
        <?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValue()) ?>
    </td>
</tr>
<?php else:?>
<tr id="grandtotal-tax">
    <td style="<?php echo $this->getStyle() ?>" class="a-right grandtotal-label" colspan="<?php echo $this->getColspan(); ?>">
        <?php if ($_hasZeroTax): ?>
            <?php echo $this->helper('tax')->__('Grand Total (Tax Free)'); ?>
        <?php elseif ( Mage::getStoreConfig('tax/cart_display/subtotal') == 1 ): ?>
            <?php echo $this->helper('tax')->__('Grand Total (Excl. Tax)') ?>
        <?php elseif ( Mage::getStoreConfig('tax/cart_display/subtotal') == 2 ): ?>
            <?php echo $this->helper('tax')->__('Grand Total (Incl. Tax)') ?>
        <?php else: ?>
            <?php echo $this->getTotal()->getTitle() ?>
        <?php endif; ?>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="a-right grandtotal-value">
        <?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValue()) ?>
    </td>
</tr>
<?php endif;?>

/**
 * Multishipping checkout billing information
 *
 * @see Mage_Checkout_Block_Multishipping_Billing
 */

$_method = $this->getMethodsForm();
if ( $_method != null ) {
    $_code = $_method->getCode();
}
else {
    $_code = null;
}

if ( strpos($_code, 'sepa') === FALSE ) {
    $_css_block_1 = 'col-1 narrow';
    $_css_block_2 = 'col-2 wide';
}
else {
    $_css_block_1 = 'full-wide';
    $_css_block_2 = 'full-wide sepa-details';
}
?>
<div class="page-title">
    <h2><?php echo $this->__('Billing Information') ?></h2>
</div>
<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<form action="<?php echo $this->getPostActionUrl() ?>" method="post" id="multishipping-billing-form">
	<?php echo $this->getBlockHtml('formkey'); ?>
    <fieldset class="multiple-checkout">
        <div class="col2-set">
            <div class="<?php echo $_css_block_1 ?>">
                <h3><?php echo $this->__('Billing Address') ?></h3>
                <?php $_address=$this->getAddress() ?>
                <address><?php echo Mage::helper('mpcheckout/addressformat')->formatHtml($_address) ?></address>
            </div>
            <div class="<?php echo $_css_block_2 ?>">
                <!-- Payment methods forms list -->
                <?php
                if($_method != null)
                {
                    echo '<h3>'.$this->htmlEscape($_method->getTitle()).'</h3>';

                    if($html = $this->getChildHtml('payment.method.'.$_code))
                    {
                        echo $html;
                    }
                }

                echo $this->getChildHtml('checkout_billing_items');
                ?>
            </div>
        </div>
    </fieldset>
    <div class="buttons-set">
        <a id="paymentInformationBack" href="<?php echo $this->getBackUrl() ?>" class="button">
            <?php echo $this->__('Back') ?>
        </a>
        <a id="paymentInformationContinueShopping" class="button" href="<?php echo $this->getUrl() ?>">
            <span><?php echo $this->__('Continue Shopping') ?></span>
        </a>
        <button id="paymentInformationContinue" class="button" type="submit">
            <span><?php echo $this->__('Continue') ?></span>
        </button>
    </div>
</form>

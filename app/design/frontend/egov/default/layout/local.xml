<?xml version="1.0"?>
<!DOCTYPE layout>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/app_egov.js</name></action>
        </reference>
		<reference name="footer">
		   <block type="cms/block" name="cms_footer_links" before="footer_links">
		      <action method="setBlockId">
		         <block_id>footer_links</block_id>
		      </action>
		   </block>
		</reference>
    </default>

	<catalogsearch_result_index translate="label">
		<reference name="root">
			<action method="setTemplate"><template>page/2columns-left.phtml</template></action>
		</reference>

		<reference name="left_first">
			<action method="unsetChild"><name>catalogsearch.leftnav</name></action>
		</reference>

		<reference name="left">
			<block type="catalogsearch/layer" name="catalogsearch.leftnav" after="topMenu" template="catalog/layer/view.phtml">
				<block type="core/text_list" name="catalog.leftnav.state.renderers" as="state_renderers"/>
			</block>
		</reference>
	</catalogsearch_result_index>

	<catalogsearch_advanced_index translate="label">
		<reference name="root">
			<action method="setTemplate"><template>page/2columns-left.phtml</template></action>
		</reference>
	</catalogsearch_advanced_index>

	<catalogsearch_advanced_result translate="label">
		<reference name="root">
			<action method="setTemplate"><template>page/2columns-left.phtml</template></action>
		</reference>
	</catalogsearch_advanced_result>
</layout>

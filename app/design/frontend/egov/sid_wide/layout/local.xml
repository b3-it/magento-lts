<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE layout>
<layout>
    <default>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/app_egov.js</name></action>
        </reference>

        <reference name="left">
            <remove name="left.newsletter" />
            <remove name="catalog.leftnav" />
        </reference>

        <reference name="top.links">
            <action method="removeLinkByUrl"><url helper="customer/getRegisterUrl"/></action>
        </reference>
        
        <reference name="footer_links2">
        	<action method="removeLinkBlock"><name>return_link</name></action>
        </reference>
    </default>

    <catalog_category_default translate="label">
        <reference name="left">
            <block type="catalog/layer_view" name="catalog.leftnav.bottom" after="navbar" as="category_filter"
                   template="catalog/layer/view.phtml">
                <block type="core/text_list" name="catalog.leftnav.state.renderers" as="state_renderers"/>
            </block>
        </reference>
        <reference name="product_list">
            <action method="setColumnCount"><count>4</count></action>
        </reference>
    </catalog_category_default>

    <customer_account>
        <reference name="customer_account_navigation">
            <action method="removeLinkByName"><name>newsletter</name></action>
            <action method="removeLinkByName"><name>OAuth Customer Tokens</name></action>
            <action method="removeLinkByName"><name>tags</name></action>
            <action method="removeLinkByName"><name>recurring_profiles</name></action>
            <action method="removeLinkByName"><name>billing_agreements</name></action>
        </reference>
    </customer_account>

    <customer_account_index translate="label">
        <reference name="my.account.wrapper">
            <remove name="newsletter" />
        </reference>
    </customer_account_index>
</layout>

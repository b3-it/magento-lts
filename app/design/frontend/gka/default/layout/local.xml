<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE layout>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <remove name="silver_track" />
            
            <action method="addItem"><type>skin_js</type><name>js/app_egov.js</name></action>
        </reference>

        <reference name="content">
            <!-- zusÃ¤tzliche Miniatur-Ansichten entfernen -->
            <remove name="product.info.media" />
        </reference>

        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>

        <reference name="header">
            <block type="gkabase/page_html_welcome" name="welcome" as="welcome"/>
        </reference>

        <reference name="left">
             <!-- Newsletter entfernen -->
             <remove name="left.newsletter" />
        </reference>

        <reference name="right">
            <!-- Warenkorb rechts entfernen -->
            <remove name="cart_sidebar" />
        </reference>
    </default>

    <customer_account>
        <reference name="customer_account_navigation">
            <action method="removeLinkByName"><name>billing_agreements</name></action>
            <action method="removeLinkByName"><name>recurring_profiles</name></action>
            <action method="removeLinkByName"><name>reviews</name></action>
            <action method="removeLinkByName"><name>tags</name></action>
            <action method="removeLinkByName"><name>newsletter</name></action>
            <action method="removeLinkByName"><name>downloadable_products</name></action>
            <action method="removeLinkByName"><name>OAuth Customer Tokens</name></action>
            <action method="removeLinkByName"><name>address_book</name></action>
            <action method="removeLinkByName"><name>wishlist</name></action>
        </reference>
    </customer_account>

    <catalog_product_view>
        <reference name="product.info">
            <!-- Zusatzinformation in der Artikelansicht raus-->
            <remove name="product.attributes" />
            <!-- Bewertungen in der Artikelansicht raus -->
            <remove name="product.reviews" />
        </reference>
    </catalog_product_view>

    <customer_account_login translate="label">
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
    </customer_account_login>
    
    <catalog_category_default>
        <reference name="left">
            <remove name="catalog.leftnav" />
            <remove name="left.newsletter" />
        </reference>
    </catalog_category_default>

    <catalog_product_view translate="label">
        <!-- Zusatz-Links in der Produktansicht entfernen -->
        <reference name="content">
            <remove name="addto" />
            <remove name="product.info.addto" />
            <remove name="product.info.additional" />
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
    </catalog_product_view>    

    <checkout_cart_index>
        <!-- Rabattcodes im Warenkorb raus -->
        <reference name="checkout.cart">
            <action method="unsetChild"><name>coupon</name></action>
        </reference>
    </checkout_cart_index>
    
    <checkout_multishipping>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
            <action method="addBodyClass"><classname>mp-checkout</classname></action>
        </reference>
    </checkout_multishipping>
</layout>

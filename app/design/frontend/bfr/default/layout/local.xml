<?xml version="1.0"?>
<layout>
    <default>
        <reference name="head">
            <action method="removeItem">
                <type>skin_js</type>
                <name>js/app_egov.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/app_bfr.js</name>
            </action>
        </reference>
    </default>

    <checkout_cart_index>
        <reference name="content">
            <remove name="checkout.cart.coupon"/>
        </reference>
    </checkout_cart_index>

    <catalogsearch_result_index translate="label">
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-left.phtml</template>
            </action>
        </reference>
    </catalogsearch_result_index>
</layout>

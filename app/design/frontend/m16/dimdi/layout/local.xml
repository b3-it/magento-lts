<?xml version="1.0" encoding="UTF-8"?>
<!--
 Individuelle Layout-Anpassungen


-->
<layout version="0.1.0">
    <default>
        <reference name="right">
        <!-- Mage_Compare raus: Produkt-Vergleich -->
            <action method="unsetChild"><name>catalog.compare.sidebar</name></action>

        <!-- Mage_Cart raus: Warenkorb -->
            <action method="unsetChild"><name>cart_sidebar</name></action>

        <!-- Mage_Reports raus: Kürzlich angesehe Produklte -->
            <remove name="left.reports.product.viewed" />
            <remove name="right.reports.product.viewed" />
            <remove name="right.reports.product.compared" />

		<!-- Versuch Infobox -->
			<block type="infobox/box" name="infobox" as="infobox" template="egovs/infobox/box.phtml"/>
		<!-- Ende Infobox -->
		</reference>

		<reference name="left">
			<action method="unsetChild"><name>infobox</name></action>
		    <action method="unsetChild"><name>herausgeberbox</name></action>
		    <action method="unsetChild"><name>catalog.compare.sidebar</name></action>
			<action method="unsetChild"><name>left.newsletter</name></action>
		</reference>

    </default>

    <catalog_category_default>
        <update handle="page_three_columns" />
        <reference name="left">
            <action method="unsetChild"><name>catalog.leftnav</name></action>
        </reference>
        <reference name="product_list">
            <!-- Nicht benötigt wenn setLayoutCode in page.xml gesetzt ist -->
            <!--<action method="setColumnCount"><columns>2</columns></action>-->
            <action method="addColumnCountLayoutDepend"><layout>three_columns</layout><count>2</count></action>
        </reference>
    </catalog_category_default>

    <catalog_category_layered>
        <update handle="page_three_columns" />
        <reference name="left">
            <action method="unsetChild"><name>catalog.leftnav</name></action>
        </reference>
        <reference name="product_list">
            <!-- Nicht benötigt wenn setLayoutCode in page.xml gesetzt ist -->
            <!--<action method="setColumnCount"><columns>2</columns></action>-->
            <action method="addColumnCountLayoutDepend"><layout>three_columns</layout><count>2</count></action>
        </reference>
    </catalog_category_layered>

    <catalogsearch_result_index>
        <update handle="page_three_columns" />
        <reference name="search_result_list">
            <!-- Nicht benötigt wenn setLayoutCode in page.xml gesetzt ist -->
            <!--<action method="setColumnCount"><columns>2</columns></action>-->
            <action method="addColumnCountLayoutDepend"><layout>three_columns</layout><count>2</count></action>
        </reference>
    </catalogsearch_result_index>

    <customer_account_create translate="label">
        <reference name="content">
            <action method="unsetChild"><name>customer_form_register</name></action>
            <block type="egovsbase/customer_form_register" name="customer_form_register" template="persistent/customer/form/register.phtml">
                <action method="setShowAddressFields"><value>true</value></action>
                <block type="page/html_wrapper" name="customer.form.register.fields.before" as="form_fields_before" translate="label">
                    <label>Form Fields Before</label>
                </block>
                <block type="persistent/form_remember" name="persistent.remember.me" template="persistent/remember_me.phtml" />
                <block type="core/template" name="persistent.remember.me.tooltip" template="persistent/remember_me_tooltip.phtml" />
            </block>
        </reference>
    </customer_account_create>

    <checkout_cart_index>
        <!-- Rabattcodes im Warenkorb raus -->
        <remove name="checkout.cart.coupon" />
        <!-- Infobox links rein -->
		<reference name="left">
			<block type="infobox/box" name="infobox" as="infobox" template="egovs/infobox/box.phtml"/>
		</reference>
    </checkout_cart_index>

	<mpcheckout>
		<reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>
		<reference name="right">
			<block type="infobox/box" name="infobox" as="infobox" template="egovs/infobox/box.phtml"/>
            <block type="catalog/navigation" name="catalog.leftnav_sachsen">
		     	<action method="setData"><key>accesskey</key><value>k</value></action>
               	<action method="setData"><key>jumptitle</key><value>Category</value></action>
			    <action method="setTemplate"><template>catalog/navigation/left_sachsen.phtml</template></action>
		    </block>
		</reference>

	</mpcheckout>


    <egovs_checkout_multipage_overview>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>
		<reference name="right">
			<block type="infobox/box" name="infobox" as="infobox" template="egovs/infobox/box.phtml"/>
		</reference>
    </egovs_checkout_multipage_overview>

    <customer_account>
        <reference name="customer_account_navigation">
            <action method="removeLinkByName"><name>recurring_profiles</name></action>
            <action method="removeLinkByName"><name>billing_agreements</name></action>
            <action method="removeLinkByName"><name>debitpin_activate</name></action>
            <action method="removeLinkByName"><name>debitpin_change</name></action>
        </reference>

        <!-- Produkt vergleichen im Benutzerkonto raus -->
        <reference name="left">
            <action method="unsetChild"><name>catalog.compare.sidebar</name></action>
            <action method="unsetChild"><name>cart_sidebar</name></action>
        </reference>

        <reference name="right">
            <action method="unsetChild"><name>catalog.compare.sidebar</name></action>
            <action method="unsetChild"><name>cart_sidebar</name></action>
        </reference>
    </customer_account>

    <contacts_index_index>
        <reference name="root">
            <action method="setTemplate"><template>page/3columns.phtml</template></action>
        </reference>
    </contacts_index_index>
</layout>
?>
<?php $_config = Mage::helper('tax')->getConfig(); /* @var $_config Mage_Tax_Model_Config */ ?>
<?php if ($this->displayBoth()):?>
<tr id="subtotal_excl_tax_row">
    <td id="subtotal_excl_tax_title" style="<?php echo $this->getStyle() ?>" class="a-right" colspan="<?php echo $this->getColspan(); ?>">
        <?php echo $this->helper('tax')->__('Subtotal (Excl. Tax)') ?>
    </td>
    <td id="subtotal_excl_tax_value" style="<?php echo $this->getStyle() ?>" class="a-right">
        <?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValueExclTax()) ?>
    </td>
</tr>
<tr id="subtotal_incl_tax_row">
    <td id="subtotal_incl_tax_title" style="<?php echo $this->getStyle() ?>" class="a-right" colspan="<?php echo $this->getColspan(); ?>">
        <?php echo $this->helper('tax')->__('Subtotal (Incl. Tax)') ?>
    </td>
    <td id="subtotal_incl_tax_value" style="<?php echo $this->getStyle() ?>" class="a-right">
        <?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValueInclTax()) ?>
    </td>
</tr>
<?php else : ?>
<tr>
    <?php if ($_config->displayCartSubtotalExclTax()) : ?>
    	<?php $this->getTotal()->setTitle($this->helper('tax')->__('Subtotal (Excl. Tax)')); ?>
	<?php elseif ($_config->displayCartSubtotalInclTax()) : ?>
		<?php $this->getTotal()->setTitle($this->helper('tax')->__('Subtotal (Incl. Tax)')); ?>
	<?php endif;?>
    <td style="<?php echo $this->getStyle() ?>" class="a-right" colspan="<?php echo $this->getColspan(); ?>">
        <?php echo $this->getTotal()->getTitle() ?>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="a-right">
    	<strong><?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValue()) ?></strong>
    </td>
</tr>
<?php endif;?>

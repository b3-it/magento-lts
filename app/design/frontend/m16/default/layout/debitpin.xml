<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
    </default>
    <debitpin_index_activate>
    	<update handle="customer_account"/>
        <reference name="content">
            <block type="debitpin/account_activate" name="debitpin" template="egovs/debitpin/activate.phtml" />
        </reference>
    </debitpin_index_activate>
    <debitpin_index_success>
    	<update handle="customer_account"/>
        <reference name="content">
            <block type="debitpin/account_success" name="debitpin" template="egovs/debitpin/success.phtml" />
        </reference>
    </debitpin_index_success>
    
    <debitpin_pinchange_index>
    	<update handle="customer_account"/>
        <reference name="content">
            <block type="debitpin/account_change" name="debitpin" template="egovs/debitpin/change.phtml" />
        </reference>
    </debitpin_pinchange_index>
    <debitpin_pinchange_pinsuccess>
    	<update handle="customer_account"/>
        <reference name="content">
            <block type="debitpin/account_pinsuccess" name="debitpin" template="egovs/debitpin/pinsuccess.phtml" />
        </reference>
    </debitpin_pinchange_pinsuccess>
    
    <customer_account>
        <!-- Register for DebitPIN -->
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="debitpin"><name>debitpin_activate</name><path>debitpin/index/activate</path><label>Register for Debit Payment (PIN)</label></action>
            <action method="addLink" translate="label" module="debitpin"><name>debitpin_change</name><path>debitpin/pinchange/index</path><label>Change PIN (Debit Payment)</label></action>
        </reference>
    </customer_account>
    
</layout> 
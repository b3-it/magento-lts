                </li>
              <?php else: ?>
                <li class="level1<?php echo ($_last ? ' last' : '') ?>">
                    <a class="egov-arrow-main-closed" href="<?php echo $_link->getUrl() ?>"><?php echo $_link->getLabel() ?></a>
                </li>
              <?php endif; ?>
            <?php endforeach; ?>
            </ul>
        </li>
    </ol>

<?xml version="1.0"?>
<!DOCTYPE layout>
<layout>
    <adminhtml_sidroles_customer_index>
        <reference name="content">
            <block type="sidroles/adminhtml_customer" name="customer" />
        </reference>
    </adminhtml_sidroles_customer_index>
    
    <adminhtml_sidroles_customer_edit>
        <reference name="content">
            <block type="sidroles/adminhtml_customer_edit" name="custromeredit" />
        </reference>
        <reference name="head">
            <block type="adminhtml/template" name="optional_zip_countries" as="optional_zip_countries" template="directory/js/optional_zip_countries.phtml" />
            <action method="addJs"><file>mage/adminhtml/product/composite/configure.js</file></action>
            <action method="addJs"><file>varien/configurable.js</file></action>
        </reference>
        <reference name="left">
            <block type="adminhtml/customer_edit_tabs" name="customer_edit_tabs">
                <block type="adminhtml/customer_edit_tab_view" name="customer_edit_tab_view" template="customer/tab/view.phtml">
                    <block type="adminhtml/customer_edit_tab_view_sales" name="sales" template="customer/tab/view/sales.phtml" before="-" />
                    <block type="adminhtml/customer_edit_tab_view_accordion" name="accordion" />
                </block>
                <action method="addTab"><name>customer_edit_tab_view</name><block>customer_edit_tab_view</block></action>
            </block>
        </reference>
        <reference name="js">
            <block type="adminhtml/template" template="customer/edit/js.phtml" name="customer.edit.js" as="customer_edit_js"></block>
        </reference>
    </adminhtml_sidroles_customer_edit>
    
   <adminhtml_sidroles_customer_carts>
   	<remove name="root"></remove>
   	 <block type="adminhtml/customer_edit_tab_carts" name="admin.customer.carts"  output="toHtml" />
   </adminhtml_sidroles_customer_carts>
   <adminhtml_sidroles_customer_orders>
    <remove name="root"></remove>
     <block type="adminhtml/customer_edit_tab_orders" name="admin.customer.orders"  output="toHtml" />
   </adminhtml_sidroles_customer_orders>
   <adminhtml_sidroles_customer_wishlist>
    <remove name="root"></remove>
     <block type="adminhtml/customer_edit_tab_wishlist" name="admin.customer.wishlist"  output="toHtml" />
   </adminhtml_sidroles_customer_wishlist>
    <adminhtml_sidroles_customer_viewcart>
   	<remove name="root"></remove>
   	 <block type="adminhtml/customer_edit_tab_view_cart" name="admin.customer.view.cart"  output="toHtml" />
   </adminhtml_sidroles_customer_viewcart>
    <adminhtml_sidroles_customer_lastorders>
    <remove name="root"></remove>
     <block type="adminhtml/customer_edit_tab_view_orders" name="admin.customer.view.orders"  output="toHtml" />
   </adminhtml_sidroles_customer_lastorders>
    
    <adminhtml_sidroles_customer_viewwishlist>
    <remove name="root"></remove>
     <block type="adminhtml/customer_edit_tab_view_wishlist" name="admin.customer.view.wishlist"  output="toHtml" />
   </adminhtml_sidroles_customer_viewwishlist>
</layout>
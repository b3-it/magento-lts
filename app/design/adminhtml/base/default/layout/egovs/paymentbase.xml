<?xml version="1.0"?>
<!DOCTYPE layout>
<layout>
	<default>
        <reference name="notifications">
            <block type="paymentbase/adminhtml_notifications" name="paymentbase_notifications" template="egovs/paymentbase/notifications.phtml" before="-" />
        </reference>
    </default>
    <adminhtml_paymentbase_invalid_kassenzeichen_index>
        <reference name="content">
            <block type="paymentbase/adminhtml_invalid_kassenzeichen" name="invalid_kassenzeichen"/>
        </reference>
    </adminhtml_paymentbase_invalid_kassenzeichen_index>
    
    <adminhtml_paymentbase_localparams_index>
        <reference name="content">
            <block type="paymentbase/adminhtml_localparams" name="localparams"/>
        </reference>
    </adminhtml_paymentbase_localparams_index>
    
    <adminhtml_paymentbase_defineparams_index>
        <reference name="content">
            <block type="paymentbase/adminhtml_defineparams" name="defineparams"/>
        </reference>
    </adminhtml_paymentbase_defineparams_index>
    
    <adminhtml_paymentbase_defineparams_edit>
        <reference name="content">
            <block type="paymentbase/adminhtml_defineparams_edit" name="defineparams"/>
        </reference>
    </adminhtml_paymentbase_defineparams_edit>
    
    <adminhtml_paymentbase_haushaltsparameter_index>
        <reference name="content">
            <block type="paymentbase/adminhtml_haushaltsparameter" name="haushaltsparameters"/>
        </reference>
    </adminhtml_paymentbase_haushaltsparameter_index>
    
    <adminhtml_paymentbase_haushaltsparameter_edit>
        <reference name="head">
            <action method="addJs"><script>egovs/paymentbase/adminhtml/haushalt.js</script></action>
        </reference>
    </adminhtml_paymentbase_haushaltsparameter_edit>
    
    <custom_order_info_template>
        <reference name="order_info">
            <action method="setTemplate"><template>egovs/sales/order/view/info.phtml</template></action>
        </reference>
    </custom_order_info_template>
    
	<adminhtml_customer_edit>
        <reference name="customer_edit_tab_view">
            <action method="setTemplate"><template>egovs/customer/tab/view.phtml</template></action>
        </reference>        
    </adminhtml_customer_edit>
	
    <adminhtml_customer_edit>
        <reference name="customer_edit_tabs">
            <action method="addTab"><name>sepa_history</name><block>paymentbase/adminhtml_customer_edit_tab_sepahistory</block></action>
        </reference>        
    </adminhtml_customer_edit>
	
    <adminhtml_sales_order_view>
        <update handle="custom_order_info_template"/>
    </adminhtml_sales_order_view>
    
    <adminhtml_sales_order_invoice_new>
        <update handle="custom_order_info_template"/>
    </adminhtml_sales_order_invoice_new>
    
    <adminhtml_sales_order_invoice_view>
        <update handle="custom_order_info_template"/>
    </adminhtml_sales_order_invoice_view>
    
    <adminhtml_sales_order_shipment_new>
        <update handle="custom_order_info_template"/>
    </adminhtml_sales_order_shipment_new>
    
    <adminhtml_sales_order_shipment_view>
        <update handle="custom_order_info_template"/>
    </adminhtml_sales_order_shipment_view>
    
    <adminhtml_sales_order_creditmemo_new>
        <update handle="custom_order_info_template"/>
    </adminhtml_sales_order_creditmemo_new>
    
    <adminhtml_sales_order_creditmemo_view>
        <update handle="custom_order_info_template"/>
    </adminhtml_sales_order_creditmemo_view>

    <adminhtml_paymentbase_sales_incomingpayments_view>
        <reference name="head">
        </reference>
        <reference name="content">
            <block type="paymentbase/adminhtml_sales_incomingPayments_view" name="sales_incomingpayments_view"></block>
        </reference>
        <reference name="left">
            <block type="paymentbase/adminhtml_sales_incomingPayments_view_tabs" name="sales_incomingpayments_view_tabs">
                <action method="addTab"><name>incomingpayments_transactions</name><block>paymentbase/adminhtml_sales_incomingPayments_view_tab_transactions</block></action>
            </block>
        </reference>
    </adminhtml_paymentbase_sales_incomingpayments_view>
</layout>

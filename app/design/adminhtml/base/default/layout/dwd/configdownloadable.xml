            <action method="addColumnRender"><column>cdname</column><block>configdownloadable/adminhtml_sales_items_column_name</block><template>dwd/configdownloadable/sales/items/column/name.phtml</template></action>
        </reference>
    </adminhtml_sales_order_invoice_updateqty>

    <adminhtml_sales_order_invoice_view>
        <reference name="invoice_items">
            <action method="addItemRender"><type>configdownloadable</type><block>adminhtml/sales_items_renderer_default</block><template>dwd/configdownloadable/sales/order/invoice/view/items/renderer/configdownloadable.phtml</template></action>
            <action method="addColumnRender"><column>cdname</column><block>configdownloadable/adminhtml_sales_items_column_name</block><template>dwd/configdownloadable/sales/items/column/name.phtml</template></action>
        </reference>
    </adminhtml_sales_order_invoice_view>

    <adminhtml_sales_order_creditmemo_new>
        <reference name="order_items">
            <action method="addItemRender"><type>configdownloadable</type><block>adminhtml/sales_items_renderer_default</block><template>dwd/configdownloadable/sales/order/creditmemo/create/items/renderer/configdownloadable.phtml</template></action>
            <action method="addColumnRender"><column>cdname</column><block>configdownloadable/adminhtml_sales_items_column_name</block><template>dwd/configdownloadable/sales/items/column/name.phtml</template></action>
        </reference>
    </adminhtml_sales_order_creditmemo_new>

    <adminhtml_sales_order_creditmemo_updateqty>
        <reference name="order_items">
            <action method="addItemRender"><type>configdownloadable</type><block>adminhtml/sales_items_renderer_default</block><template>dwd/configdownloadable/sales/order/creditmemo/view/items/renderer/configdownloadable.phtml</template></action>
            <action method="addColumnRender"><column>cdname</column><block>configdownloadable/adminhtml_sales_items_column_name</block><template>dwd/configdownloadable/sales/items/column/name.phtml</template></action>
        </reference>
    </adminhtml_sales_order_creditmemo_updateqty>

    <adminhtml_sales_order_creditmemo_view>
        <reference name="creditmemo_items">
            <action method="addItemRender"><type>configdownloadable</type><block>adminhtml/sales_items_renderer_default</block><template>dwd/configdownloadable/sales/order/creditmemo/view/items/renderer/configdownloadable.phtml</template></action>
            <action method="addColumnRender"><column>cdname</column><block>configdownloadable/adminhtml_sales_items_column_name</block><template>dwd/configdownloadable/sales/items/column/name.phtml</template></action>
        </reference>
    </adminhtml_sales_order_creditmemo_view>
</layout>
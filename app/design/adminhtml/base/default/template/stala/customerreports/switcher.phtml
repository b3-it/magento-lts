<p class="switcher"><label for="group_switcher"><?php echo $this->__('Show Report for Customer Group') ?>:</label>
<select name="group_switcher" id="group_switcher" class="left-col-block" onchange="return switchGroup(this);">
    <option value=""><?php echo $this->__('All customer groups') ?></option>
    
    <?php foreach ($this->getGroupCollection() as $_cgroup): ?>           
    	<option value="<?php echo $_cgroup->getId() ?>"<?php if($this->getRequest()->getParam('cgroup') == $_cgroup->getId()): ?> selected<?php endif; ?>><?php echo $_cgroup->getCode() ?></option>
    <?php endforeach; ?>
</select>
</p>
<script type="text/javascript">
    function switchGroup(obj){
        var selectionType = 'cgroup';
        
        var storeParam = obj.value ? selectionType + '/' + obj.value + '/' : '';
        if(obj.switchParams){
            storeParam+= obj.switchParams;
        }
        setLocation('<?php echo $this->getSwitchUrl() ?>'+storeParam);
    }
</script>
    period_date_to.advaiceContainer = $('period_date_to_advaice');

    function validateFilterDate()
    {    
        //var test = Date.parse(period_date_from.input-text); 
        var first_check = false;
        var wrong_format_is = -1;

        if (period_date_from && period_date_to) {
            first_check = (Validation.validate(period_date_from) && Validation.validate(period_date_to));
        }
        else {
            first_check = true;
        }

        if (first_check) {

            if (Calendar._TT["DEF_DATE_FORMAT"]) {

            	var dtFrom = period_date_from.getValue();
                var dtTo = period_date_to.getValue();

                // eg. 01.04.10 for 1st of April
                if ((Calendar._TT["DEF_DATE_FORMAT"] == '%d.%m.%y') || (Calendar._TT["DEF_DATE_FORMAT"] == '%d.%m.%Y')) {
                    // do regex match
                    if (!dtFrom.match(/([0-9]{1,2})\.([0-9]{1,2})\.([0-9]{2,4})/)) {
                        wrong_format_is = 0;
                    }
					else {
						if ((RegExp.$2 == 2) && (RegExp.$1 > 29)) {
							wrong_format_is = 0;
						}
						else if ((RegExp.$2 < 1) || (RegExp.$2 > 12) || (RegExp.$1 < 1) || (RegExp.$1 > 31)) {
							wrong_format_is = 0;
						}
					}

                    // do regex match
                    if (!dtTo.match(/([0-9]{1,2})\.([0-9]{1,2})\.([0-9]{2,4})/)) {
                        wrong_format_is = (-1 < wrong_format_is)?2:1;
                    }
					else {
						if ((RegExp.$2 == 2) && (RegExp.$1 > 29)) {
							wrong_format_is = (-1 < wrong_format_is)?2:1;
						}
						else if ((RegExp.$2 < 1) || (RegExp.$2 > 12) || (RegExp.$1 < 1) || (RegExp.$1 > 31)) {
							wrong_format_is = (-1 < wrong_format_is)?2:1;
						}
					}
                }

                // eg. 01/04/10 for 1st of April
                else if ((Calendar._TT["DEF_DATE_FORMAT"] == '%d/%m/%y') || (Calendar._TT["DEF_DATE_FORMAT"] == '%d/%m/%Y')) {
                    // do regex match
                    if (!dtFrom.match(/([0-9]{1,2})\/([0-9]{1,2})\/([0-9]{2,4})/)) {
                        wrong_format_is = 0;
                    }
					else {
						if ((RegExp.$2 == 2) && (RegExp.$1 > 29)) {
							wrong_format_is = 0;
						}
						else if ((RegExp.$2 < 1) || (RegExp.$2 > 12) || (RegExp.$1 < 1) || (RegExp.$1 > 31)) {
							wrong_format_is = 0;
						}
					}

                    // do regex match
                    if (!dtTo.match(/([0-9]{1,2})\/([0-9]{1,2})\/([0-9]{2,4})/)) {
                        wrong_format_is = (-1 < wrong_format_is)?2:1;
                    }
					else {
						if ((RegExp.$2 == 2) && (RegExp.$1 > 29)) {
							wrong_format_is = 0;
						}
						else if ((RegExp.$2 < 1) || (RegExp.$2 > 12) || (RegExp.$1 < 1) || (RegExp.$1 > 31)) {
							wrong_format_is = 0;
						}
					}
                    
                }

                // eg. 04/01/10 for 1st of April
                else if ((Calendar._TT["DEF_DATE_FORMAT"] == '%m/%d/%y') || (Calendar._TT["DEF_DATE_FORMAT"] == '%m/%d/%Y')) {
                    // do regex match
                    if (!dtFrom.match(/[0-9]{1,1}[1-2]{0,1}\/[0-9]{1,2}\/[0-9]{2,4}/)) {
                        wrong_format_is = 0;
                    }
					else {
						if ((RegExp.$1 == 2) && (RegExp.$2 > 29)) {
							wrong_format_is = 0;
						}
						else if ((RegExp.$1 < 1) || (RegExp.$1 > 12) || (RegExp.$2 < 1) || (RegExp.$2 > 31)) {
							wrong_format_is = 0;
						}
					}

                    // do regex match
                    if (!dtTo.match(/[0-9]{1,1}[1-2]{0,1}\/[0-9]{1,2}\/[0-9]{2,4}/)) {
                        wrong_format_is = (-1 < wrong_format_is)?2:1;
                    }
					else {
						if ((RegExp.$1 == 2) && (RegExp.$2 > 29)) {
							wrong_format_is = 0;
						}
						else if ((RegExp.$1 < 1) || (RegExp.$1 > 12) || (RegExp.$2 < 1) || (RegExp.$2 > 31)) {
							wrong_format_is = 0;
						}
					}
                    
                }
            }
        }

        if (wrong_format_is == 0) {
            alert(<?php echo "'".$this->__('Check the From Date Value, please')."'"?>);
            return false;
        }
        else if (wrong_format_is == 1) {
            alert(<?php echo "'".$this->__('Check the To Date Value, please')."'"?>);
            return false;
        }
        else if (wrong_format_is == 2) {
            alert(<?php echo "'".$this->__('Check the Date Value, please')."'"?>);
            return false;
        }

        return first_check;
    }

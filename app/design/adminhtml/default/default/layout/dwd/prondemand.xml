<?xml version="1.0" encoding="UTF-8"?>
<layout>
    <adminhtml_catalog_product_prondemand>
        <reference name="product_tabs">
            <block type="prondemand/adminhtml_catalog_product_edit_tab_prondemand" name="product.edit.tab.prondemand" template="dwd/prondemand/product/edit/downloadable.phtml">
                <block type="configdownloadable/adminhtml_widget_accordion" name="accordion">
                    <block type="downloadable/adminhtml_catalog_product_edit_tab_downloadable_samples" name="accordion_samples">
                        <action method="setData"><name>title</name><value>Samples</value></action>
                    </block>
                    <block type="prondemand/adminhtml_catalog_product_edit_tab_prondemand_ondemand" name="catalog.product.edit.tab.downloadable.ondemand" as="accordion_ondemand" template="dwd/prondemand/product/edit/downloadable/ondemand.phtml">
                        <action method="setData"><name>title</name><value>Dynamic Links</value></action>
                        <action method="setData"><name>is_open</name><value>1</value></action>
                    </block>
                    
                    <action method="setData"><name>id</name><value>downloadableInfo</value></action>
                    <action method="addAccordionItem"><name>samples</name><block>accordion_samples</block></action>
                    <action method="addAccordionItem"><name>ondemand</name><block>catalog.product.edit.tab.downloadable.ondemand</block></action>
                </block>
            </block>
            <action method="addTab"><name>prondemand_tab</name><block>product.edit.tab.prondemand</block></action>
            <action method="addTab"><name>period</name><block>periode/adminhtml_catalog_product_edit_tab_periode</block></action>        
        </reference>
    </adminhtml_catalog_product_prondemand>
    
     <PRODUCT_TYPE_prondemand>
